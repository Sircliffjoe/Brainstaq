<%= render layout: 'courses/course_wizard/step' do %>
  <%= simple_form_for @course, url: course_course_wizard_path, method: :put do |f| %>

    <%= f.check_box :published, class: "custom-control-input", id: "publishSwitch1" %>
    <label class="custom-control-label" for="publishSwitch1">Publish</label>
    <br/>
    <%= f.button :submit, "Save & Continue", class: "actions btn btn-primary rounded mt-3" %>
  <% end %>
<% end %>