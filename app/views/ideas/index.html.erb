<% content_for :title, "Discover Ideas" %>

<!-- start of page-header -->
<section class="page-header bg-light-gray has-shapes has-bg-brash bg-brash-bottom" style="background-image: url(<%= image_path "banner.svg" %>)">
    <div class="container h-100">
        <div class="row d-flex align-items-center h-100">
            <div class="col-md-12 text-center">
                <h2 class="h1 font-weight-bold">Projects</h2>
                <nav class="mt-15" aria-label="breadcrumb">
                    <ol class="breadcrumb font-weight-bold bg-transparent p-0 justify-content-center">
                        <li class="breadcrumb-item"><%= link_to "Home", root_path, class: "text-black-300" %></li>
                        <li class="breadcrumb-item text-primary" aria-current="page">Projects</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>

    <div class="shape-1 bg-secondary shape-xs rounded-circle"></div>
    <div class="shape-2 bg-primary shape-xs-2 rounded-circle"></div>
    <div class="shape-3 bg-primary shape-sm-2 rounded-circle"></div>
    <div class="shape-4 bg-tertiary shape-xs rounded-circle"></div>
    <div class="shape-5 bg-tertiary shape-xs rounded-circle"></div>
    <div class="shape-6 bg-primary shape-sm rounded-circle"></div>
    <div class="shape-7 bg-primary shape-xs-2 rounded-circle"></div>
    <div class="shape-8 bg-secondary shape-xs rounded-circle"></div>
</section>
<!-- end of page-header -->

<!-- <div class="row justify-content-center align-self-center"> -->
<main id="main">
  <section id="why-us">
    <div class="container-fluid">  
      <header class="section-header" style="padding-top: 90px;">
        <h3>Discover <span class="text-primary"> Ideas</span></h3>
        <p style="font-size: 18px;">Explore creative and innovative ideas across Africa
        </p>
      </header>
    </div>
  
    <div class="site-section ideas-entry-wrap mt-0" style="margin-top: 0px;" data-aos="fade" data-aos-delay="100">
      <div class="container">
        <div class="form-group col-sm-3">
          <%= render partial: "layouts/categories" %>  
        </div>
        <%= render partial: "layouts/ideas" %>
        <div class="row justify-content-center mt-5">
          <div class="col-7 text-center"> 
            <% if @page > 0 %>
            <%= link_to 'Prev', ideas_path(page: @page - 1), class: "btn rounded text-white mr-1" %>
            <% end %>
            <% if @ideas.count >= 6 %>
            <%= link_to 'Next', ideas_path(page: @page + 1), class: "btn rounded text-white ml-1" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </section>
  <div class="justify-content-center">
    <%= render partial: "layouts/counter" %>
    <%= render partial: "layouts/cta" %>
    <%= render partial: "layouts/faq" %>
  </div>
</main>
