<section class="section-service">
	<div class="container">
		<!-- Start Header Section -->
		<div class="row justify-content-center text-center">
			<div class="col-md-8 col-lg-6">
			</div>
		</div>
		<!-- / End Header Section -->

		<% if user_signed_in? && current_user.id == @enterprise.user_id %>
			<%= link_to fa_icon("edit", title: "Add Service", class: "text-primary float-right mr-2 mt-2", style: "font-size: 20px;"), 
			new_enterprise_service_path(@enterprise) %>
		<% end %>
			
    	<div class="row justify-content-center mt-5 text-center">
      	<% @enterprise.services.each do |service| %>
					<!-- Start Single Person -->
					<div class="col-sm-4 mb-5">
          <% if user_signed_in? && current_user.id == @enterprise.user_id %>
						<div class="dropdown mr-3 mt-5 float-right" style="font-size: 20px;">
							<a class="dropdown-toggle fas fa-ellipsis-v" href="#" role="button" id="dropdownMenuLink" 
								data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
							</a>
							<div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink" style="font-size: 12px;">
								<%= link_to "Edit", edit_enterprise_service_path(@enterprise, service), class: "dropdown-item" %>
								<%= link_to "Delete", [@enterprise, service], :method => 'delete', data: { confirm: 'Are you sure?' }, class: "dropdown-item" %>
							</div>
						</div>
          <% end %>
						<div class="single-person">
							<div class="person-image">
								<%= image_tag service.image.url, skip_pipeline: true %>
							</div>
							<div>
								<h5 class="full-name"><%= service.title %></h5>
								<h6 class=""><small><%= service.description.html_safe %></small></h6>
							</div>
						</div>
					</div><!-- / End Single Person -->
				<% end %>
      </div>
		</div>
	</section>

  <style>
p,a,h1,h2,h3,h4 {
	margin: 0;
	padding: 0;
}

.section-service .header-section {
	margin-bottom: 50px;
}

.section-service .header-section .title {
    font-weight: 700;
    font-size: 45px;
}

.section-service .single-person {
	margin-top: 20px;
	padding: 50px;
	background-color: #f6f9ff;
	/* border-radius: 5px; */
}

.section-service .single-person:hover {
	background: linear-gradient(to right, #016cec, #00b5f7, #0070C0);
}

.section-service .single-person .person-image {
    position: relative;
    margin-bottom: 10px;
    /* border-radius: 5px; */
    transition: padding .3s;
}

.section-service .single-person:hover .person-image {
	padding: 10px;
  /* border: 3px dashed #fff; */
}

.section-service .single-person .person-image img {
	width: 100%;
  height: 100%;
  /* border-radius: 5px !important; */
}

.full-name {
	margin-bottom: 1px;
	font-size: 16px;
}

 .speciality {
  text-transform: uppercase;
  font-size: 11px;
  color: #0070C0;
}

.section-service .single-person:hover .full-name,
.section-service .single-person:hover h6,
.section-service .single-person:hover .speciality {
	color: #fff;
}
  </style>