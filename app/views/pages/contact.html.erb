<% content_for :title, "Contact" %>

<!-- start of page-header -->
<section class="page-header bg-light-gray has-shapes has-bg-brash bg-brash-bottom" style="background-image: url(<%= image_path "banner.svg" %>)">
  <div class="container h-100">
    <div class="row d-flex align-items-center h-100">
      <div class="col-md-12 text-center">
        <h2 class="h1 font-weight-bold">Contact</h2>
        <nav class="mt-15" aria-label="breadcrumb">
          <ol class="breadcrumb font-weight-bold bg-transparent p-0 justify-content-center">
            <li class="breadcrumb-item"><%= link_to "Home", root_path, class: "text-black-300" %></li>
            <li class="breadcrumb-item text-primary" aria-current="page">Contact</li>
          </ol>
        </nav>
      </div>
    </div>
  </div>

  <div class="shape-1 bg-secondary shape-xs rounded-circle"></div>
  <div class="shape-2 bg-primary shape-xs-2 rounded-circle"></div>
  <div class="shape-3 bg-primary shape-sm-2 rounded-circle"></div>
  <div class="shape-4 bg-tertiary shape-xs rounded-circle"></div>
  <div class="shape-5 bg-tertiary shape-xs rounded-circle"></div>
  <div class="shape-6 bg-primary shape-sm rounded-circle"></div>
  <div class="shape-7 bg-primary shape-xs-2 rounded-circle"></div>
  <div class="shape-8 bg-secondary shape-xs rounded-circle"></div>
</section>

<!-- start of contact-section -->
<section class="section-padding contact-section has-shapes" data-aos="fade-in" data-aos-delay="150">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-9 text-center mb-40">
                <p>We understand that your business may require custom solutions. 
                We are committed to making your business work. Just drop us a line!</p>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-xl-6 col-lg-7">
                <form method="POST" class="needs-validation rounded shadow p-30" novalidate>
                    <div class="form-group mb-30">
                        <label class="text-black-200 h5 font-weight-600 mb-2" for="fname">Full Name</label>
                        <input class="form-control shadow-none" type="text" placeholder="John Doe" id="fname" required>
                        <p class="font-weight-bold invalid-feedback">Your name is required!</p>
                    </div>
                    <div class="form-group mb-30">
                        <label class="text-black-200 h5 font-weight-600 mb-2" for="email">Email</label>
                        <input class="form-control shadow-none" type="email" placeholder="jdoe@brainstaq.com" id="email" required>
                        <p class="font-weight-bold invalid-feedback">Your email is required!</p>
                    </div>
                    <div class="form-group mb-30">
                        <label class="text-black-200 h5 font-weight-600 mb-2" for="website">Company Website</label>
                        <input class="form-control shadow-none" type="url" placeholder="Website">
                        <p class="font-weight-bold valid-feedback">OK! You can skip this field.</p>
                        <p class="font-weight-bold invalid-feedback">ex: https://brainstaq.com/</p>
                    </div>
                    <div class="form-group mb-30">
                        <label class="text-black-200 h5 font-weight-600 mb-2" for="message">Message</label>
                        <textarea class="form-control shadow-none" name="comment" rows="5" id="message" required></textarea>
                        <p class="font-weight-bold invalid-feedback">Tell us something!</p>
                    </div>
                    <button class="btn btn-primary w-100" type="submit">Submit</button>
                </form>
            </div>
            <div class="col-xl-4 col-lg-5 mt-5 mt-lg-0">
                <div class="rounded shadow p-30 mb-30">
                    <h3 class="font-weight-600">
                        <i class="ti-location-pin text-primary mr-2"></i>
                        Our Address
                    </h3>

                    <ul class="list-unstyled check-list-primary mt-30">
                        <li class="mb-20">
                            <span><svg width="16" height="11" viewBox="0 0 18 13" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M2 6.125L6.91892 11L16 2" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"/></svg></span>
                            brainstaq@gmail.com
                        </li>
                        <li class="mb-20">
                            <span><svg width="16" height="11" viewBox="0 0 18 13" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M2 6.125L6.91892 11L16 2" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"/></svg></span>
                            (234) 706-182-8205
                        </li>
                        <li>
                            <span><svg width="16" height="11" viewBox="0 0 18 13" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M2 6.125L6.91892 11L16 2" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"/></svg></span>
                            86, Airport Road, Effurun, Delta State, Nigeria
                        </li>
                    </ul>
                </div>
                <div class="rounded shadow p-30">
                    <h3 class="font-weight-600">
                        <i class="ti-info-alt text-primary mr-2"></i>
                        Contact us for
                    </h3>

                    <ul class="list-unstyled check-list-primary mt-30">
                        <li class="mb-20">
                            <span><svg width="16" height="11" viewBox="0 0 18 13" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M2 6.125L6.91892 11L16 2" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"/></svg></span>
                            Critical analysis of your core business
                        </li>
                        <li class="mb-20">
                            <span><svg width="16" height="11" viewBox="0 0 18 13" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M2 6.125L6.91892 11L16 2" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"/></svg></span>
                            Development of a working business model                        </li>
                        <li>
                            <span><svg width="16" height="11" viewBox="0 0 18 13" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M2 6.125L6.91892 11L16 2" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"/></svg></span>
                            Business funding opportunities 
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    
    <div class="shape-1 shape-sm bg-secondary rounded-circle"></div>
    <div class="shape-2 shape-sm-2 bg-primary rounded-circle"></div>
    <div class="shape-3 shape-sm bg-secondary rounded-circle"></div>
    <div class="shape-4 shape-sm-2 bg-tertiary rounded-circle"></div>
</section>
<!-- end of contact-section -->
  <style>
    .row {
      clear: both;
    }
  </style>