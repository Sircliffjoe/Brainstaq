<%= form_with(model: enterprise) do |form| %>
  <% if enterprise.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(enterprise.errors.count, "error") %> prohibited this enterprise from being saved:</h2>

      <ul>
        <% enterprise.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="col-sm-12 form-group">
    <%= form.label :brand_category, class: "text-primary", style: "font-size: 18px;" %>
    <%= form.collection_select(:category_id, Category.all, :id, :name, 
        {prompt: 'What category does your idea fall into?'}, class: "form-control") %>
  </div>

  <div class="field">
    <%= form.label :address %>
    <%= form.text_field :address %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div class="field">
    <%= form.label :phone_number %>
    <%= form.text_field :phone_number %>
  </div>

  <div class="field">
    <%= form.label :country %>
    <%= form.text_field :country %>
  </div>

  <div class="field">
    <%= form.label :state %>
    <%= form.text_field :state %>
  </div>

  <div class="form-group input-group">
    <div class="input-group-prepend">
      <span class="input-group-text"><i class="fas fa-globe"></i></span>
    </div>
    <%= form.text_field :website_url, placeholder: "Enter your website... e.g http://example.com", class: "form-control" %>
  </div>

  <div class="form-group input-group">
    <div class="input-group-prepend">
      <span class="input-group-text"><i class="fab fa-facebook"></i></span>
    </div>
    <%= form.text_field :facebook_url, placeholder: "Enter your Facebook profile link... e.g https://facebook.com/profile", class: "form-control" %>
  </div>

  <div class="form-group input-group">
    <div class="input-group-prepend">
      <span class="input-group-text"><i class="fab fa-twitter"></i></span>
    </div>
    <%= form.text_field :twitter_url, placeholder: "Enter your Twitter profile link... e.g https://twitter.com/profile", class: "form-control" %>
  </div>

  <div class="form-group input-group">
    <div class="input-group-prepend">
      <span class="input-group-text"><i class="fab fa-instagram"></i></span>
    </div>
    <%= form.text_field :instagram_url, placeholder: "Enter your Instagram profile link... e.g https://instagram.com/profile", class: "form-control" %>
  </div>

  <div class="field">
    <%= form.text_field :user_id, value: current_user.id, class: 'd-none' %>
  </div>

  <div class="col-sm-12">
    <%= form.label :logo, class: "text-primary", style: "font-size: 18px;" %>
    <%= form.file_field :image %>
  </div>

  <div class="col-sm-12">
    <%= form.hidden_field :image_cache %>
  </div>

  <div class="field">
    <%= form.label :info %>
    <%= form.text_field :info %>
  </div>

  <div class="field">
    <%= form.label :city %>
    <%= form.text_field :city %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
