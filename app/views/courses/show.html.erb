                                  <div class="position-relative d-flex align-items-center">
                                    <a href="<%= course_lesson_path(@course, lesson) + '#current_lesson' %>" class="btn btn-danger-soft play-button-icon btn-round btn-sm mb-0 stretched-link position-static">
