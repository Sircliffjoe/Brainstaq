            ]), {}, :class => 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.email_field :email, required: true, class: "form-control", placeholder: "Email Address" %>
          </div>

          <div class="form-group">
            <%= f.password_field :password, class: "form-control", placeholder: "Enter Password" %>
          </div>

          <div class="form-group mb-2">
            <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Repeat Password" %>
          </div>
          
          <small>By signing up, you agree to Brainstaq's 
            <%= link_to 'Terms of Service', 'pages/terms', class: 'para-font' %> and
            <%= link_to 'Privacy Policy', 'pages/privacy', class: 'para-font' %> 
          </small>

          <div class="field captcha mt-2 form-group">
            <%#= recaptcha_tags %>
          </div>
          
          <div class="form-group"  style="margin-top: 10px; margin-bottom: 0px">
            <%= f.submit "CREATE ACCOUNT", class: "btn btn-block text-white", style: "font-weight: bold;" %>
          </div>
        <% end %>
      </div><!-- col end-->
    </div><!-- row end-->
  </div><!-- container end-->
</section><!-- #intro -->

<!--==========================
  Trending Ideas Section
============================-->
<main id="main">
  <section id="why-us" class="mb-0">
    <div class="container-fluid">  
      <header class="section-header mt-3">
        <h3>Trending<span class="text-primary"> Ideas</span></h3>
        <p style="font-size: 18px;">We celebrate innovative ideas and projects with the 
          potential to disrupt ecosystems in Africa
        </p>
      </header>
    </div>
     
    <%= render partial: "layouts/ideas", locals: { ideas: @ideas} %>
    
    <div class="row justify-content-center mt-5">
      <div class="col-7 text-center"> 
        <% if @page > 0 %>
          <%= link_to 'Prev', root_path(page: @page - 1), class: "btn rounded text-white mr-1" %>
        <% end %>
        <% if @ideas.count >= 3 %>
          <%= link_to 'Next', root_path(page: @page + 1), class: "btn rounded text-white ml-1" %>
