<% content_for :title, "Edit Settings" %>


<!-- start of page-header -->
<section class="page-header bg-light-gray has-shapes has-bg-brash bg-brash-bottom" style="background-image: url(<%= image_path "banner.svg" %>)">
  <div class="container h-100">
      <div class="row d-flex align-items-center h-100">
          <div class="col-md-12 text-center">
              <h2 class="h1 font-weight-bold">Edit Account</h2>
              <nav class="mt-15" aria-label="breadcrumb">
                  <ol class="breadcrumb font-weight-bold bg-transparent p-0 justify-content-center">
                      <li class="breadcrumb-item"><%= link_to "Profile", profile_path(current_user.username), class: "text-black-300" %></li>
                      <li class="breadcrumb-item text-primary" aria-current="page">Edit Account</li>
                  </ol>
              </nav>
          </div>
      </div>
  </div>

  <div class="shape-1 bg-secondary shape-xs rounded-circle"></div>
  <div class="shape-2 bg-primary shape-xs-2 rounded-circle"></div>
  <div class="shape-3 bg-primary shape-sm-2 rounded-circle"></div>
  <div class="shape-4 bg-tertiary shape-xs rounded-circle"></div>
  <div class="shape-5 bg-tertiary shape-xs rounded-circle"></div>
  <div class="shape-6 bg-primary shape-sm rounded-circle"></div>
  <div class="shape-7 bg-primary shape-xs-2 rounded-circle"></div>
  <div class="shape-8 bg-secondary shape-xs rounded-circle"></div>
</section>
<!-- end of page-header -->

<header class="section-header mb-5" style="padding-top: 50px;">
  <%# <h3>Edit <span class="text-primary">Account</span></h3> %>
</header>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <small><%= render "devise/shared/error_messages", resource: resource %></small>

<section class="profile-account-setting">
			<div class="container">
				<div class="account-tabs-setting">
					<div class="row">
						<div class="col-lg-3">
							<div class="acc-leftbar">
								<div class="nav nav-tabs" id="nav-tab" role="tablist">
								    <a class="nav-item nav-link active" id="nav-acc-tab" data-toggle="tab" href="#nav-acc" role="tab" aria-controls="nav-acc" aria-selected="true">Personal Details</a>
								    <a class="nav-item nav-link" id="nav-status-tab" data-toggle="tab" href="#nav-status" role="tab" aria-controls="nav-status" aria-selected="false">Social Profiles</a>
								    <a class="nav-item nav-link" id="nav-password-tab" data-toggle="tab" href="#nav-password" role="tab" aria-controls="nav-password" aria-selected="false">Change Password</a>
								    <a class="nav-item nav-link" id="nav-requests-tab" data-toggle="tab" href="#nav-requests" role="tab" aria-controls="nav-requests" aria-selected="false">Upload Photo</a>
								    <a class="nav-item nav-link" id="nav-deactivate-tab" data-toggle="tab" href="#nav-deactivate" role="tab" aria-controls="nav-deactivate" aria-selected="false">Delete Account</a>
								  </div>
							</div><!--acc-leftbar end-->
						</div>
						<div class="col-lg-9">
							<div class="tab-content" id="nav-tabContent">
								<div class="tab-pane fade show active" id="nav-acc" role="tabpanel" aria-labelledby="nav-acc-tab">
									<div class="acc-setting">
										<h3>Personal Details</h3>
										<form>
											<div class="cp-field">
												<div class="cpp-fiel">
													<input type="text" name="old-password" placeholder="Last Name">
												</div>
											</div>
											<div class="cp-field">
												<div class="cpp-fiel">
													<input type="text" name="new-password" placeholder="First Name">
												</div>
											</div>
											<div class="cp-field">
												<div class="cpp-fiel">
													<input type="text" name="repeat-password" placeholder="Username">
												</div>
											</div>
											<div class="cp-field">
												<div class="cpp-fiel">
													<input type="text" name="repeat-password" placeholder="Gender">
												</div>
											</div>
											<div class="cp-field">
												<div class="cpp-fiel">
													<input type="text" name="repeat-password" placeholder="Country">
												</div>
											</div>
											<div class="cp-field">
												<div class="cpp-fiel">
													<input type="text" name="repeat-password" placeholder="Phone Number">
												</div>
											</div>
											<div class="cp-field">
												<div class="cpp-fiel">
													<input type="text" name="repeat-password" placeholder="Bio">
												</div>
											</div>
											<div class="save-stngs">
												<ul>
													<li><button type="submit">Update Account</button></li>
													<li><button type="submit">Cancel</button></li>
												</ul>
											</div><!--save-stngs end-->
										</form>
									</div><!--acc-setting end-->
								</div>

							  	<div class="tab-pane fade" id="nav-status" role="tabpanel" aria-labelledby="nav-status-tab">
							  		<div class="acc-setting">
							  			<h3>Social Profiles</h3>
							  			<form>
											<div class="cp-field">
												<div class="cpp-fiel">
													<input type="text" name="old-password" placeholder="Enter your website... e.g http://example.com">
												</div>
											</div>
											<div class="cp-field">
												<div class="cpp-fiel">
													<input type="text" name="new-password" placeholder="Enter your Facebook profile link... e.g https://facebook.com/profile-name">
												</div>
											</div>
											<div class="cp-field">
												<div class="cpp-fiel">
													<input type="text" name="repeat-password" placeholder="Enter your Twitter profile link... e.g https://twitter.com/profile-name">
												</div>
											</div>
											<div class="cp-field">
												<div class="cpp-fiel">
													<input type="text" name="repeat-password" placeholder="Enter your Instagram profile link... e.g https://instagram.com/profile-name">
												</div>
											</div>
											<div class="cp-field">
												<div class="cpp-fiel">
													<input type="text" name="repeat-password" placeholder="Enter your Linkedin profile link... e.g https://linkedin.com/in/profile-name">
												</div>
											</div>
											<div class="save-stngs pd2">
												<ul>
													<li><button type="submit">Update Account</button></li>
													<li><button type="submit">Cancel</button></li>
												</ul>
											</div><!--save-stngs end-->
										</form>
							  		</div><!--acc-setting end-->
							  	</div>
							  	
									<div class="tab-pane fade" id="nav-password" role="tabpanel" aria-labelledby="nav-password-tab">
							  		<div class="acc-setting">
										<h3>Change Password</h3>
										<form>
											<div class="cp-field">
												<h5>Old Password</h5>
												<div class="cpp-fiel">
													<input type="text" name="old-password" placeholder="Old Password">
												</div>
											</div>
											<div class="cp-field">
												<h5>New Password</h5>
												<div class="cpp-fiel">
													<input type="text" name="new-password" placeholder="New Password">
												</div>
											</div>
											<div class="cp-field">
												<h5>Repeat Password</h5>
												<div class="cpp-fiel">
													<input type="text" name="repeat-password" placeholder="Confirm Password">
												</div>
											</div>
											<div class="save-stngs pd2">
												<ul>
													<li><button type="submit">Update Account</button></li>
													<li><button type="submit">Cancel</button></li>
												</ul>
											</div><!--save-stngs end-->
										</form>
									</div><!--acc-setting end-->
							  	</div>
							  	
							  	<div class="tab-pane fade" id="nav-requests" role="tabpanel" aria-labelledby="nav-requests-tab">
							  		<div class="acc-setting">
							  			<h3>Upload Photo</h3>
							  			<div class="requests-list">
							  				<div class="request-details">
							  					<div class="noty-user-img">
							  						<img src="http://via.placeholder.com/35x35" alt="">
							  					</div>
							  					<div class="request-info">
							  						<h3>Change Profile Photo</h3>
							  						<span>100 x 100 pixels</span>
							  					</div>
							  					<div class="accept-feat">
							  						<ul>
							  							<li><button type="submit" class="accept-req">Browse</button></li>
							  						</ul>
							  					</div><!--accept-feat end-->
													<div class="save-stngs pd2">
														<ul>
															<li><button type="submit">Update Account</button></li>
															<li><button type="submit">Cancel</button></li>
														</ul>
													</div><!--save-stngs end-->
							  				</div><!--request-detailse end-->
							  			</div><!--requests-list end-->
							  		</div><!--acc-setting end-->
							  	</div>

							  	<div class="tab-pane fade" id="nav-deactivate" role="tabpanel" aria-labelledby="nav-deactivate-tab">
							  		<div class="acc-setting">
										<h3 class="text-danger">Delete Account</h3>
										<form>
											<div class="cp-field">
												<p>We are not happy to see you go. Deleting your account would delete all
												of your conversations and also remove you of Brainstaq's mailing list and 
												every other correspondences. This action cannot be reversed.</p>
											</div>
											<div class="save-stngs pd3">
												<ul>
													<li><button type="submit">Delete Account</button></li>
												</ul>
											</div><!--save-stngs end-->
										</form>
									</div><!--acc-setting end-->
							  	</div>
							</div>
						</div>
					</div>
				</div><!--account-tabs-setting end-->
			</div>
		</section>
    <% end %>
