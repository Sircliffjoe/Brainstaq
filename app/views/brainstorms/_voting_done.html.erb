<div class="flex-col flex w-full md:p-4 lg:p-0 mx-auto lg:max-w-screen-lg">
  <h1 class="p-4 text-4xl lg:text-2xl text-dark font-semibold uppercase bg-gray-200 leading-tight inline-flex">VOTING DONE!</h1>
  <h1 class="problem mt-4 p-8 text-6xl lg:text-4xl text-white font-semibold uppercase bg-black leading-tight w-full"><%=@brainstorm.problem %></h1>
  <div class="lg:mb-4 mb-16 lg:mt-4 mt-8 flex lg:flex-row flex-col justify-between">
  <% if user_signed_in? %>
    <%= link_to new_brainstorm_path do %>
      <button class="lg:block hover:scale-105 ease-in-out duration-200 transform lg:p-2 md:p-4 font-semibold uppercase bg-pinky active:bg-darker-pinky leading-tight my-shadow-lg lg:w-64 w-full">
        <div class="border-solid border-blurple border-2 flex items-center lg:justify-between md:justify-center px-4 lg:py-0 md:py-4">
            <div class="flex text-blurple font-semibold h-full text-base focus:outline-none py-2 md:text-4xl lg:text-lg">NEW BRAINSTORM</div>
          <div class="flex">
            <svg class="lg:h-6 lg:w-6 md:h-12 md:w-12 md:ml-4 lg:ml-0" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="22px" height="44px" viewBox="0 0 22 44" version="1.1">
              <title>0A8AFE57-5D7F-4A41-BCD4-6E6B8A8CA7CB</title>
              <g id="Page-1" stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                <g id="Desktop-HD" transform="translate(-1045.000000, -208.000000)" fill="#312783" fill-rule="nonzero">
                  <g id="flash_on-24px" transform="translate(1045.000000, 208.000000)">
                    <polygon id="Path" points="0 0 0 24.2 6.6 24.2 6.6 44 22 17.6 13.2 17.6 19.8 0" />
                  </g>
                </g>
              </g>
            </svg>
          </div>
        </div>
      </button>
    <% end %>
  <% else %>
    <h6 class="mt-2" style="font-size: 18px; font-style: italic;"> 
      You must <strong>Login</strong> <%= link_to "Log In", new_user_session_path %> or 
      <%= link_to "Create an Account", new_user_registration_path %> to create new Brainstorm. 
    </h6>
  <% end %>
    <div class="flex lg:space-x-2">
      <%#= link_to download_brainstorm_path(token: @brainstorm.token, session_id: @session_id), method: :post, id: "save-to-pdf-button" do %>
        <%# <button class="hidden lg:block hover:scale-105 ease-in-out duration-200 transform lg:p-2 md:p-4 text-white font-semibold uppercase bg-dark active:bg-darker-blurple leading-tight lg:w-56">
          <div class="border-solid border-white border-2 flex items-center lg:justify-between md:justify-center px-4 lg:py-0 md:py-4">
              <div class="flex text-white font-semibold h-full text-base focus:outline-none py-2 md:text-4xl lg:text-lg">SAVE TO PDF</div>
            <div class="flex">
              <svg id="save-to-pdf-button-icon" class="lg:h-6 lg:w-6 md:h-12 md:w-12 md:ml-4 lg:ml-0" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="white">
                <path d="M0 0h24v24H0z" fill="none" />
                <path d="M20 2H8c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V4c0-1.1-.9-2-2-2zm-8.5 7.5c0 .83-.67 1.5-1.5 1.5H9v2H7.5V7H10c.83 0 1.5.67 1.5 1.5v1zm5 2c0 .83-.67 1.5-1.5 1.5h-2.5V7H15c.83 0 1.5.67 1.5 1.5v3zm4-3H19v1h1.5V11H19v2h-1.5V7h3v1.5zM9 9.5h1v-1H9v1zM4 6H2v14c0 1.1.9 2 2 2h14v-2H4V6zm10 5.5h1v-3h-1v3z" />
              </svg>
                <div id="save-to-pdf-button-spinner" style="border-top-color:transparent" class="hidden h-5 w-5 rounded-full border-2 border-white animate-spin">
                </div>
            </div>
          </div>
        </button> %>
      <%# end %>
      <%# <button onclick="openSendEmailModal()" class="hover:scale-105 ease-in-out duration-200 transform lg:p-2 md:p-4 text-lg lg:text-2xl text-white font-semibold uppercase bg-dark active:bg-darker-blurple focus:outline-none leading-tight lg:w-56 w-full lg:mt-0 md:mt-8">
        <div class="border-solid border-white border-2 flex items-center lg:justify-between md:justify-center px-4 lg:py-0 md:py-4">
          <div class="flex text-white font-semibold h-full text-base focus:outline-none py-2 md:text-4xl lg:text-lg">EMAIL</div>
          <div class="flex">
            <svg class="lg:h-6 lg:w-6 md:h-12 md:w-12 md:ml-4 lg:ml-0" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="white">
              <path d="M0 0h24v24H0z" fill="none" />
              <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z" />
            </svg>
          </div>
        </div>
      </button> %>
    </div>
  </div>
  <div class="block w-full lg:flex lg:flex-wrap lg:justify-between lg:px-0 px-16 ml-0 lg:p-0" id="conceptsVotingDone">
    <% @concepts.order('votes DESC').each do |concept| %>
    <div class="flex flex-col xl:mr-4">
      <div class="my-8 lg:my-4 bg-gray-200">
        <div class="concept-card lg:h-64 lg:w-64 w-full lg:px-4 px-10 lg:pt-6 lg:pb-1 pt-14 pb-8 flex flex-col items-start font-bold bg-post-it-yellowy cursor-default">
          <div class="flex flex-row justify-between w-full">
            <h2 class="mb-4 lg:m-0 text-dark text-5xl lg:text-xl">#<%= concept.number %></h2>
            <h2 class="mb-4 lg:m-0 text-dark text-5xl lg:text-xl"><%= pluralize(concept.votes, "vote") %></h2>
          </div>
          <h2 class="mb-4 lg:m-0 text-dark text-5xl lg:text-xl"></h2>
          <p class="mb-4 lg:m-0 text-4xl lg:text-base leading-loose lg:leading-normal"><%= concept.text %></p>
        </div>
        <% concept.concept_builds.order(:id).each do |concept_build| %>
        <div class="lg:w-64 w-full bg-post-it-yellowy-<%= concept_build.opacity_lookup %> font-bold lg:px-4 px-10">
          <div class="flex flex-row justify-between w-full items-center">
            <h2 class="py-4 mb-4 lg:m-0 text-dark text-5xl lg:text-xl">#<%= concept.number %>.<%= concept_build.decimal %></h2>
            <h2 class="py-4 mb-4 lg:m-0 text-dark text-5xl lg:text-xl"><%= pluralize(concept_build.votes, "vote") %></h2>
          </div>
          <p class="py-4 text-4xl lg:text-base leading-loose lg:leading-normal"><%= concept_build.concept_build_text %></p>
        </div>
        <% end %>
      </div>

    </div>
    <% end %>
  </div>
</div>
