<% content_for :title, "Explore Courses" %>

<!-- start of page-header -->
<section class="page-header bg-light-gray has-shapes has-bg-brash bg-brash-bottom" style="background-image: url(<%= image_path "banner.svg" %>)">
  <div class="container h-100">
    <div class="row d-flex align-items-center h-100">
      <div class="col-md-12 text-center">
        <h2 class="h1 font-weight-bold">Courses</h2>
        <nav class="mt-15" aria-label="breadcrumb">
          <ol class="breadcrumb font-weight-bold bg-transparent p-0 justify-content-center">
            <li class="breadcrumb-item"><%= link_to "Home", root_path, class: "text-black-300" %></li>
            <li class="breadcrumb-item text-primary" aria-current="page">Courses</li>
          </ol>
        </nav>
      </div>
    </div> 
  </div>

  <div class="shape-1 bg-secondary shape-xs rounded-circle"></div>
  <div class="shape-2 bg-primary shape-xs-2 rounded-circle"></div>
  <div class="shape-3 bg-primary shape-sm-2 rounded-circle"></div>
  <div class="shape-4 bg-tertiary shape-xs rounded-circle"></div>
  <div class="shape-5 bg-tertiary shape-xs rounded-circle"></div>
  <div class="shape-6 bg-primary shape-sm rounded-circle"></div>
  <div class="shape-7 bg-primary shape-xs-2 rounded-circle"></div>
  <div class="shape-8 bg-secondary shape-xs rounded-circle"></div>
</section>
<!-- end of page-header -->

<!-- <div class="row justify-content-center align-self-center"> -->
<main id="main">
  <section class="section-padding pb-0" data-aos="fade-in" data-aos-delay="150">
    <div class="container mb-5">  
      <div class="row justify-content-center">
        <div class="col-lg-6 col-md-9 text-center mb-40">
          <h2 class="section-title">Explore <strong><span class="text-primary">Courses</span></strong></h2>
          <p style="font-size: 16px;">
            Access a growing library of professional business courses, and build a smarter enterprise using our
            structured approach
          </p>
        </div>
      </div>
    </div>
    <div class="site-section ideas-entry-wrap mt-0" style="margin-top: 0px;" data-aos="fade" data-aos-delay="100">
      <div class="container">
        <div class="form-group row">  
          <div class="col-sm-10">
            <%= render partial: "layouts/course_categories", class: "btn btn-secondary" %>              
          </div>
          <div class="col-sm-2">
              <%= link_to 'All Categories', course_categories_path, class: "actions btn up-acct rounded mb-2 btn-primary" %>
          </div>
        </div>
      </div>
      
      <h3 class="text-center mb-3">
        <i class="fa fa-graduation-cap"></i>
        All courses:
        <span class="badge badge-info"><%= @courses.count %></span>
      </h3>
      <p></p>

      <div class="row">
        <div class="col-lg-12 order-1 order-lg-1">
          <div class="container">
            <div class="row">
              <%= render 'courses/course_landscape', course: @course %>
              <p></p>
            </div>
          </div>
        </div>
      </div>
      <br>

      <div class="row justify-content-center mt-5">
        <div class="col-7 text-center"> 
          <% if @page > 0 %>
            <%= link_to 'Prev', courses_path(page: @page - 1), class: "btn rounded text-white mr-1" %>
          <% end %>
          <% if @courses.count >= 9 %>
            <%= link_to 'Next', courses_path(page: @page + 1), class: "btn rounded text-white ml-1" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  </section>
  <div class="justify-content-center">
  </div>
  
  <%= render partial: "layouts/cta" %>
</main>
