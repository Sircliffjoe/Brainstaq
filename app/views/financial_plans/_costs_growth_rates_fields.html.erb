<div class="p-6 mb-5 rounded nested-fields row g-3">

  <%= form.hidden_field :_destroy %>

  <div class="mb-6 mt-3 col-sm-12 form-group">
    <label class="form-label">Item</label>
    <%= form.select(:item_name, options_for_select([
        ['Direct Costs'],
        ['Salaries'],
        ['Rent'],
        ['Utilities'],
        ['Marketing'],
        ['Insurance'],
        ['Transport'],
        ['Licenses'],
        ['Maintenance']
        ]), {}, :class => 'form-control') %>
  </div>
  <div class="col-md-6 mt-3">
    <label class="form-label">Year One</label>
    <%= form.number_field :cost_growth_rate_one, class: "form-control", placeholder: "Enter bank interest rate"  %>
  </div>
  <div class="col-md-6 mt-3">
    <label class="form-label">Year Two</label>
    <%= form.number_field :cost_growth_rate_two, class: "form-control", placeholder: "Enter bank interest rate"  %>
  </div>
  <div class="col-md-6 mt-3">
    <label class="form-label">Year Three</label>
    <%= form.number_field :cost_growth_rate_three, class: "form-control", placeholder: "Enter bank interest rate"  %>
  </div>
  <div class="col-md-6 mt-3">
    <label class="form-label">Year Four</label>
    <%= form.number_field :cost_growth_rate_four, class: "form-control", placeholder: "Enter inflation rate"  %>
  </div>
  <div class="col-md-6 mt-3">
    <label class="form-label">Year Five</label>
    <%= form.number_field :cost_growth_rate_five, class: "form-control", placeholder: "Enter percentage benefits of Salary"  %>
  </div>

  <div class="mb-6 col-sm-12 form-group">
    <%= form.hidden_field :financial_plan_id, placeholder: "0", class: "input form-control" %>
  </div>

  <%= link_to "Remove", "#", data: { action: "click->nested-form#remove_association" }, class: "text-primary underline text-sm col-sm-12" %>
</div>