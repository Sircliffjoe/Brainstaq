<% content_for :title, "Upgrade Subscription Plans" %>
  
<!-- start of page-header -->
<section class="page-header bg-light-gray has-shapes has-bg-brash bg-brash-bottom" style="background-image: url(<%= image_path "banner.svg" %>)">
  <div class="container h-100">
    <div class="row d-flex align-items-center h-100">
      <div class="col-md-12 text-center">
        <h2 class="h1 font-weight-bold">Pricing</h2>
        <nav class="mt-15" aria-label="breadcrumb">
          <ol class="breadcrumb font-weight-bold bg-transparent p-0 justify-content-center">
            <li class="breadcrumb-item"><%= link_to "Home", root_path, class: "text-black-300" %></li>
            <li class="breadcrumb-item text-primary" aria-current="page">Pricing</li>
          </ol>
        </nav>
      </div>
    </div>
  </div>

  <div class="shape-1 bg-secondary shape-xs rounded-circle"></div>
  <div class="shape-2 bg-primary shape-xs-2 rounded-circle"></div>
  <div class="shape-3 bg-primary shape-sm-2 rounded-circle"></div>
  <div class="shape-4 bg-tertiary shape-xs rounded-circle"></div>
  <div class="shape-5 bg-tertiary shape-xs rounded-circle"></div>
  <div class="shape-6 bg-primary shape-sm rounded-circle"></div>
  <div class="shape-7 bg-primary shape-xs-2 rounded-circle"></div>
  <div class="shape-8 bg-secondary shape-xs rounded-circle"></div>
</section>
<!-- end of page-header -->
  
  
<div class="form-grids row widget-shadow" data-example-id="basic-forms"></div>
  <div class="col-md-12 panel-grids">
    <div class="panel panel-info"> <div class="panel-heading"> <h3 class="panel-title"> Details</h3> </div> <div class="panel-body">
    <br />

    <div class="col-md-12">
      <div class="card">
        <div class="card-body card-body">
          <div class="card-header">
            <h5 class="card-title" style="color:orange;"><strong>You have <%=current_user.interval%> plan active</strong></h5>
          </div>
          <table class="table">
            <thead>
              <tr>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td><h2 style="color:green;">Select New Plan to Upgrade to</h2></td>       
              </tr>
              <tr>
                <td><strong><%= current_user.email %></strong></td>
                <td><strong><%= current_user.phone %></strong></td>
              </tr>
            </tbody>
          </table>
        </div>

        <% if current_user.admin %>
        <div class="row">
          <% @plans_list.each do |post| %>
            <div class="col-md-4"> 
              <div class="panel panel-success">
                <div class="cnrflash">
                  <div class="cnrflash-inner">
                    <span class="cnrflash-label">EXPRESS<br>ACCESS</span>
                  </div>
                </div>
                <div class="panel-heading">
                  <h3 class="panel-title">
                  <%=post['name']%></h3>
                </div>
                <div class="panel-body">
                  <div class="the-price">
                    <h1>
                      <%=post['currency']%> <%=post['amount']/100%><span class="subscript">/<%=post['interval']%></span>
                    </h1>
                    <small>1 month FREE trial</small>
                  </div>
                  <table class="table">
                    <tr>
                      <td>
                        Unlimited Clients
                      </td>
                    </tr>
                    <tr class="active">
                      <td>
                        Unlimited Attorneys
                      </td>
                    </tr>
                    <tr>
                      <td>
                        Instant Notifications
                      </td>
                    </tr>
                    <tr class="active">
                      <td>
                        Email Notifications
                      </td>
                    </tr>
                    <tr>
                      <td>
                        Corprate Conversations
                      </td>
                    </tr>
                    <tr class="active">
                      <td>
                        File Sharing
                      </td>
                    </tr>
                  </table>
                </div>
                <div class="panel-footer">
                  <%= button_to 'Select Plan', transactions_path(:code => post['plan_code'], :interval=> post['interval']), method: :post, class:"btn btn-success" %>
                </div>
              </div>
            </div> 
          <% end %>
        </div>
        <% end %> 
      </div>
    </div>
  </div>
</div>

<%= link_to 'Back to Dashboard', dashboard_path(current_user.full_name), class:"btn btn-info" %> |
<%= link_to "Back", :back, class:"btn btn-warning"%> 