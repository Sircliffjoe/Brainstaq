<div class="site-section py-0">
  
  <!-- Advert Banner Carousel Section -->
  <div id="advertCarousel" class="carousel slide" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#advertCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#advertCarousel" data-slide-to="1"></li>
      <li data-target="#advertCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <%= link_to image_tag(asset_path('advert_banner.png'), class: "d-block w-100", alt: "Advert Banner 1"), courses_path %>
      </div>
      <div class="carousel-item">
        <%= link_to image_tag(asset_path('advert_banner2.png'), class: "d-block w-100", alt: "Advert Banner 1"), enterprises_path %>
      </div>
      <div class="carousel-item">
        <%= link_to image_tag(asset_path('advert_banner3.png'), class: "d-block w-100", alt: "Advert Banner 1"), ideas_path %>
      </div>
    </div>
    <a class="carousel-control-prev" href="#advertCarousel" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#advertCarousel" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
  <!-- End of Advert Banner Carousel Section -->

  <div class="owl-carousel hero-slide owl-style">
    <div class="site-section">
      <div class="container">
        <div class="section-title">
          <h2>Editor's Pick</h2>
        </div>
        <% if @latest_post %>
          <div class="half-post-entry d-block d-lg-flex bg-light">
            <div class="img-bg" style="background-image: url('<%= url_for(@latest_post.image) %>')">
              <%= link_to post_path(@latest_post) do %>
                <span class="sr-only"><%= @latest_post.title %></span>
              <% end %>
            </div>
            <div class="contents">
              <span class="caption">
                <%= @latest_post.category.name %>
              </span>
              <h2><%= link_to @latest_post.title, post_path(@latest_post) %></h2>
              
              <p class="mb-3"><%= truncate(@latest_post.short_description, length: 200) %></p>
              <div class="post-meta">
                <span class="d-block">
                  By <%= @latest_post.author %>
                </span>
                <span class="date-read">
                  <%= local_time(@latest_post.created_at) %> 
                </span>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
			
  <div class="site-section" style="margin-top: -60px !important;">
    <div class="container">
      <div class="row">
        <div class="col-lg-8">
          <div class="row">
            <div class="col-12">
              <div class="section-title">
                <h2>Latest Posts</h2>
              </div>
            </div>
          </div>
          
          <div class="row">
            <% if @next_four_posts.any? %>
              <div class="col-md-6">
                <% post = @next_four_posts.first %>
                <div class="post-entry-1">
                  <%= link_to image_tag(post.image, width: 350, height: 220), post_path(post), class: "img-fluid" %>
                  <h2 class="mb-2"><%= link_to post.title, post_path(post) %></h2>
                  <p class="mb-2"><%= post.short_description %></p>
                  <div class="post-meta">
                    <strong><span class="d-block text-dark">
                      By <%= post.author %>
                    </span></strong>
                    <span class="date-read">
                      <%= local_time(post.created_at) %> 
                    </span>
                  </div>
                </div>
              </div>

              <div class="col-md-6">
                <% @next_four_posts.drop(1).each do |post| %>
                  <div class="post-entry-2 d-flex bg-light">
                    <div class="thumbnail" style="background-image: url('<%= url_for(post.image) %>')"></div>
                    <div class="contents">
                      <h2 class="mb-1"><%= link_to post.title, post_path(post) %></h2>
                      <div class="post-meta">
                        <span class="d-block">By <%= post.author %></span>
                        <span class="date-read"><%= local_time(post.created_at) %></span>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>

        <div class="col-lg-4">
          <div class="section-title">
            <h2>Trending</h2>
          </div>
          
          <% if @trending_posts.present? %>
            <% @trending_posts.each_with_index do |post, index| %>
              <div class="trend-entry d-flex">
                <div class="number align-self-start">0<%= index + 1 %></div>
                <div class="trend-contents">
                  <h2><%= link_to post.title, post_path(post) %></h2>
                  <div class="post-meta">
                    <span class="d-block">By <%= post.author %></span>
                    <span class="date-read"><%= local_time(post.created_at) %></span>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  $(document).ready(function(){
    $('#advertCarousel').carousel({
      interval: 3000
    });
  });
</script>