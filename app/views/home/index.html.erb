
<!--==========================
    Intro Section
  ============================-->
  <section id="intro" class="clearfix">
    <div class="container d-flex h-100">
      <div class="row justify-content-center align-self-center">
        <div class="col-md-6 intro-info order-md-first order-last">
          <h2 style="margin-top: 180px;">Share, validate<br>and market your ideas with <span> Brainstaq!</span></h2>
          <div>
      			<%= link_to 'Explore Brainstaq', ideas_path, class: "btn-get-started" %>
          </div>
        </div>
