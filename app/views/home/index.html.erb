    <!--==========================
    Trending Ideas Section
  ============================-->
  <main id="main">
    <section id="why-us" class="mb-0">
      <div class="container-fluid">  
        <header class="section-header mt-3">
          <h3>Trending<span class="text-primary"> Ideas</span></h3>
          <p style="font-size: 18px;">We celebrate innovative ideas and projects with the 
            potential to disrupt ecosystems in Africa
          </p>
        </header>
      </div>
      
      <div class="site-section ideas-entry-wrap mb-0">
        <div class="container">
          
          <%= render partial: "layouts/ideas", locals: { ideas: @ideas} %>

          <div class="row justify-content-center mt-5">
            <div class="col-7 text-center"> 
              <% if @page > 0 %>
                <%= link_to 'Prev', root_path(page: @page - 1), class: "btn btn1 rounded-pill text-white mr-1" %>
              <% end %>
                <% if @ideas.count >= 3 %>
                <%= link_to 'Next', root_path(page: @page + 1), class: "btn btn1 rounded-pill text-white ml-1" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
