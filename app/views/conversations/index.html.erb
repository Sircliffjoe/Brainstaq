<style>
  .glyphicon {
    float: right;
    margin-top: 2px;
    margin-right: -6px;
  }
</style>

<div class="container-fluid mb-5" style="width: 1000px" class="mx-auto">
  <div class="list-group col-lg-12">
  <ul class="nav nav-pills nav-stacked">
    <li>
      <button type="button" class="list-group-item" data-toggle="collapse" 
        data-target="#mail">
          <h5 class="mb-0">Conversations<i class="glyphicon glyphicon-inbox"></i></h5>
      </button>
      <br>
    </li>
    
    <li>
      <button type="button" class="list-group-item" data-toggle="collapse" 
      data-target="#new">
        <h5 class="mb-0">New Message<i class="glyphicon glyphicon-new-window" style="vertical-align: right;"></i></h5>
      </button>
    </li>
  </ul>
</div>

<div class="col-lg-6 float-right mb-5">
  <%= image_tag 'loudspeaker.png', class: "img-fluid" %>
</div>

<div class="col-lg-12">
<!-- <h3 class="mt-1">My Inbox</h3> -->
<div class="panel panel-default">
  <div class="col-lg-6">
    <div id="mail" class="collapse">
      <h4 class="panel-heading">All Conversations:</h4>
      <div class="panel-body">
        <div class="item">
          <% @conversations.each do |conversation| %>
            <% if conversation.sender_id == current_user.id || conversation.recipient_id == current_user.id %>
              <% if conversation.sender_id == current_user.id %>
                <% recipient = User.find(conversation.recipient_id) %>
              <% else %>
                <% recipient = User.find(conversation.sender_id) %>
              <% end %>
              <% unless current_user.id == recipient %>
                <div class="columns">
                  <div class="column">
                    <% if recipient.image.url %>
                      <%= image_tag recipient.image.url, class: 'rounded-circle img-circle img-responsive mr-2', style: "width: 30px; height: 30px;" %>
                    <% else %>
                      <%= image_tag 'avatar.png', style: "width: 40px; height: 40px;", class: "rounded-circle mr-2" %>
                    <% end %>
                    <div class="inline-block"><%= link_to recipient.username, conversation_messages_path(conversation) %></div>
                  </div>
                </div>
              <% end %>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
    <div id="new" class="collapse">
      <div class="panel-body">
        <h4 class="panel-heading mt-2">All Users:</h4>
        <% @users.each do |user| %>
          <% if user.id != current_user.id %>
            <div class="item">
              <% if user.image.url %>
                <%= image_tag user.image.url, class: 'rounded-circle img-circle img-responsive mr-2', style: "width: 30px; height: 30px;" %>
              <% else %>
                <%= image_tag 'avatar.png', style: "width: 40px; height: 40px;", class: "rounded-circle mr-2" %>
              <% end %>
              <%= link_to user.username, conversations_path(sender_id: current_user.id, recipient_id: user.id), method: "post"%>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>
</div>
 



























