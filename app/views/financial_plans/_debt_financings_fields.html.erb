<div class="p-6 mb-5 rounded nested-fields row g-3">

  <%= form.hidden_field :_destroy %>

  <div class="col-md-6 mt-3">
    <label class="form-label">Loan Year</label>
    <%= form.number_field :loan_year, class: "input form-control" %>
  </div>

  <div class="col-md-6 mt-3">
    <label class="form-label">Loan Amount</label>
    <%= form.number_field :loan_amount, class: "input form-control" %>
  </div>

    <div class="col-md-6 mt-3">
    <label class="form-label">Repayment Period</label>
    <%= form.number_field :repayment_period, class: "input form-control" %>
  </div>

  <div class="col-md-6 mt-3">
    <label class="form-label">Loan End</label>
    <%= form.number_field :loan_end, class: "input form-control" %>
  </div>

  <div class="mb-6 col-sm-12 form-group">
    <%= form.hidden_field :financial_plan_id, placeholder: "0", class: "input form-control" %>
  </div>

  <%= link_to "Remove", "#", data: { action: "click->nested-form#remove_association" }, class: "text-primary underline text-sm col-sm-12" %>

</div>