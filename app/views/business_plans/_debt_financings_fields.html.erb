<div class="nested-fields">
  <%= form.hidden_field :_destroy %>

  <div class="card">
    <div class="card-body">
      <div class="row mt-2">
        <div class="col-sm-3 pb-3">
          <label for="exampleAccount">Loan Year</label>
          <%= form.number_field :loan_year, class: "input form-control" %>
        </div>

        <div class="col-sm-3 pb-3">
          <label class="form-label">Loan Amount</label>
          <%= form.number_field :loan_amount, class: "input form-control" %>
        </div>

        <div class="col-sm-3 pb-3">
          <label class="form-label">Repayment Period</label>
          <%= form.number_field :repayment_period, class: "input form-control" %>
        </div>

        <div class="col-sm-3 pb-3">
          <label class="form-label">Loan End</label>
          <%= form.number_field :loan_end, class: "input form-control" %>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <div class="float-right">
        <%= link_to "Remove", "#", data: { action: "click->nested-form#remove_association" }, class: "text-primary underline text-sm col-md-3 mt-3 ml-3 mr-3" %>
      </div>
    </div>
  </div>
</div>