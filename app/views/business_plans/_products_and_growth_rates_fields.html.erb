<div class="nested-fields">
  <%= form.hidden_field :_destroy %>
  
  <div class="card">
    <div class="card-body">
      <div class="row mt-2">
        <%# <div class="mb-6 col-sm-12 form-group"> %>
          <%# <label class="form-label">Product</label> %>
          <%#= form.collection_select(:product_id, Product.all, :id, :name, {prompt: 'Select product'}, class: "form-control") %>
        <%# </div> %>

          <div class="col-sm-5 pb-3">
            <label for="exampleAccount">Product/Service Name</label>
            <%= form.text_field :product_name, class: "form-control", placeholder: "Enter product name"  %>
          </div>
          <div class="col-sm-3 pb-3">
            <label for="exampleCtrl">Price</label> 
            <%= form.number_field :base_product_price, class: "form-control", placeholder: "Enter price"  %>
          </div>
          <div class="col-sm-4 pb-3">
            <label for="exampleAmount">Image</label>
            <div class="input-group">
              <%= form.file_field :product_image, onchange: "validateFiles(this);", data: { max_file_size: 1.megabytes }, class: "p-2 form-control" %>
            </div>
          </div>
          
          <div class="col-md-12 pb-3">
            <label for="exampleMessage">Product/Service Description</label> 
            <%= form.text_area :description, class: "form-control", placeholder: "Enter product description" %> 
          </div>

          <div class="col-sm-12 mt-3">
            <h5 class="text-primary" style="font-size: 11px;">Enter the estimated seasonal sales percentage for each month</h5>
          </div>
          <div class="col-md-2 mt-3">
            <label class="form-label">January</label>
            <%= form.number_field :sales_percentage_one, class: "form-control" %>
          </div>
          <div class="col-md-2 mt-3">
            <label class="form-label">Febuary</label>
            <%= form.number_field :sales_percentage_two, class: "form-control" %>
          </div>
          <div class="col-md-2 mt-3">
            <label class="form-label">March</label>
            <%= form.number_field :sales_percentage_three, class: "form-control" %>
          </div>
          <div class="col-md-2 mt-3">
            <label class="form-label">April</label>
            <%= form.number_field :sales_percentage_four, class: "form-control" %>
          </div>
          <div class="col-md-2 mt-3">
            <label class="form-label">May</label>
            <%= form.number_field :sales_percentage_five, class: "form-control" %>
          </div>
          <div class="col-md-2 mt-3">
            <label class="form-label">June</label>
            <%= form.number_field :sales_percentage_six, class: "form-control" %>
          </div>
          <div class="col-md-2 mt-3">
            <label class="form-label">July</label>
            <%= form.number_field :sales_percentage_seven, class: "form-control" %>
          </div>
          <div class="col-md-2 mt-3">
            <label class="form-label">August</label>
            <%= form.number_field :sales_percentage_eight, class: "form-control" %>
          </div>
          <div class="col-md-2 mt-3">
            <label class="form-label">September</label>
            <%= form.number_field :sales_percentage_nine, class: "form-control" %>
          </div>
          <div class="col-md-2 mt-3">
            <label class="form-label">October</label>
            <%= form.number_field :sales_percentage_ten, class: "form-control" %>
          </div>
          <div class="col-md-2 mt-3">
            <label class="form-label">November</label>
            <%= form.number_field :sales_percentage_eleven, class: "form-control" %>
          </div>
          <div class="col-md-2 mt-3 pb-3">
            <label class="form-label">December</label>
            <%= form.number_field :sales_percentage_twelve, class: "form-control" %>
          </div>

        <div class="col-sm-12 mt-3">
          <h5 class="text-primary" style="font-size: 11px;">Enter the estimated revenue growth percentage rate for each year</h5>
        </div>

        <div class="mt-3 col-sm-6 form-group">
          <label class="form-label">Monthly Sales Volume</label>
          <%= form.number_field :monthly_sales_volume, class: "form-control" %>
        </div>
        <div class="col-md-3 mt-3">
          <label class="form-label">Sales Growth Rate: Yr 1</label>
          <%= form.number_field :sales_volume_growth_rate_one, class: "form-control" %>
        </div>
        <div class="col-md-3 mt-3">
          <label class="form-label">Price Growth Rate: Yr 1</label>
          <%= form.number_field :unit_price_growth_rate_one, class: "form-control" %>
        </div>
        <div class="col-md-3 mt-3">
          <label class="form-label">Sales Growth Rate: Yr 2</label>
          <%= form.number_field :sales_volume_growth_rate_two, class: "form-control" %>
        </div>
        <div class="col-md-3 mt-3">
          <label class="form-label">Price Growth Rate: Yr 2</label>
          <%= form.number_field :unit_price_growth_rate_two, class: "form-control" %>
        </div>
        <div class="col-md-3 mt-3">
          <label class="form-label">Sales Growth Rate: Yr 3</label>
          <%= form.number_field :sales_volume_growth_rate_three, class: "form-control" %>
        </div>
        <div class="col-md-3 mt-3">
          <label class="form-label">Price Growth Rate: Yr 3</label>
          <%= form.number_field :unit_price_growth_rate_three, class: "form-control" %>
        </div>
        <div class="col-md-3 mt-3">
          <label class="form-label">Sales Growth Rate: Yr 4</label>
          <%= form.number_field :sales_volume_growth_rate_four, class: "form-control" %>
        </div>
        <div class="col-md-3 mt-3">
          <label class="form-label">Price Growth Rate: Yr 4</label>
          <%= form.number_field :unit_price_growth_rate_four, class: "form-control"  %>
        </div>
        <div class="col-md-3 mt-3">
          <label class="form-label">Sales Growth Rate: Yr 5</label>
          <%= form.number_field :sales_volume_growth_rate_five, class: "form-control"  %>
        </div>
        <div class="col-md-3 mt-3">
          <label class="form-label">Price Growth Rate: Yr 5</label>
          <%= form.number_field :unit_price_growth_rate_five, class: "form-control"  %>
        </div>
      </div>
    </div>
    <div class="card-footer">
      <div class="float-right">
        <%= link_to "Remove", "#", data: { action: "click->nested-form#remove_association" }, class: "text-primary underline text-sm col-md-3 mt-3 ml-3 mr-3" %>
      </div>
    </div>
  </div>
</div>