										<h3>Change Password</h3>
										
											<div class="cp-field">
												<h5>Current Password</h5>
												<div class="cpp-fiel">
													<%= f.password_field :current_password, placeholder: "Enter your current password to confirm your changes", class: "form-control" %>
												</div>
											</div>
											<div class="cp-field">
												<h5>New Password</h5>
												<div class="cpp-fiel">
													<%= f.password_field :password, placeholder: "Enter New Password", class: "form-control" %>
												</div>
											</div>
											<div class="cp-field">
												<h5>Confirm New Password</h5>
												<div class="cpp-fiel">
													<%= f.password_field :password_confirmation, placeholder: "Confirm New Password", class: "form-control" %>
												</div>
											</div>
											<div class="save-stngs pd2">
												<ul>
													<li><%= f.submit "Update Account", class: "btn btn-primary" %></li>
													<li><%= link_to "Cancel", :back, class: "btn btn-secondary" %></li>
												</ul>
											</div><!--save-stngs end-->
										</div><!--acc-setting end-->
							  	</div>
							  	
							  	<div class="tab-pane fade" id="nav-requests" role="tabpanel" aria-labelledby="nav-requests-tab">
