<% content_for :title, "Log In" %>

<section class="page-header bg-light-gray has-shapes has-bg-brash bg-brash-bottom" style="background-image: url(<%= image_path "banner.svg" %>)">
  <div class="container h-100">
    <div class="row d-flex align-items-center h-100">
      <div class="col-md-12 text-center">
        <h2 class="h1 font-weight-bold">Login</h2>
        <nav class="mt-15" aria-label="breadcrumb">
          <ol class="breadcrumb font-weight-bold bg-transparent p-0 justify-content-center">
            <li class="breadcrumb-item"><%= link_to "Home", root_path, class: "text-black-300" %></li>
            <li class="breadcrumb-item text-primary" aria-current="page">Login</li>
          </ol>
        </nav>
      </div>
    </div>
  </div>

  <div class="shape-1 bg-secondary shape-xs rounded-circle"></div>
  <div class="shape-2 bg-primary shape-xs-2 rounded-circle"></div>
  <div class="shape-3 bg-primary shape-sm-2 rounded-circle"></div>
  <div class="shape-4 bg-tertiary shape-xs rounded-circle"></div>
  <div class="shape-5 bg-tertiary shape-xs rounded-circle"></div>
  <div class="shape-6 bg-primary shape-sm rounded-circle"></div>
  <div class="shape-7 bg-primary shape-xs-2 rounded-circle"></div>
  <div class="shape-8 bg-secondary shape-xs rounded-circle"></div>
</section>

<main id="main">
  <section class="section-padding pb-0" data-aos="fade-in" data-aos-delay="150">
    <div class="container">  
      <div class="row justify-content-center">
        <div class="col-lg-6 col-md-9 text-center mb-0">
          <h2 class="section-title">Welcome <strong><span class="text-primary">Back!</span></strong></h2>
        </div>
      </div>
    </div>

    <article class="card-body mx-auto" style="max-width: 400px; padding-top: 30px;">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <small><%= render "devise/shared/error_messages", resource: resource %></small>

        <p>
          <%= link_to user_google_oauth2_omniauth_authorize_path do %>
            <span class="btn btn-outline-primary w-100 mb-2">
              <i class="fab fa-google"></i> Login with Google
            </span>
          <% end %>
        </p>
        <p class="divider-text mb-2 mt-2">
          <span class="bg-light">OR</span>
        </p>

          <div class="form-group input-group">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fa fa-envelope"></i></span>
            </div>
            <%= f.text_field :login, autofocus: true, class: "form-control shadow-none", placeholder: "Email or Username" %>
          </div>

          <div class="form-group input-group" data-controller="toggle">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fa fa-lock"></i></span>
            </div>
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control form__element unhide", "data-target": "toggle.unhide shadow-none", placeholder: "Password" %>
            <div class="input-group-prepend">
              <span class="input-group-text"><a class="show" data-target="toggle.show" data-action="click->toggle#password">show</a></span>
            </div>
                        
          </div>

         
          <% if devise_mapping.rememberable? %>
            <div class="form-group input-group">
              <div class="input-group-prepend">
                <div class="checkbox">
                  <label><%= f.check_box :remember_me %> Remember me</label>
                </div>
              </div>
            </div>
          <% end %>
          
          <div class="form-group actions">
            <%= f.submit "Log In", class: "btn btn-primary w-100" %>
          </div>

          <div class="col-12">
            <p class="text-center">Don't have an account?<%= render "devise/shared/links" %></p>
          </div>
      <% end %>
    </article>
  </section>
</main>


