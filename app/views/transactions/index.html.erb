<% content_for :title, "Tranaction History" %>
  
<!-- start of page-header -->
<section class="page-header bg-light-gray has-shapes has-bg-brash bg-brash-bottom" style="background-image: url(<%= image_path "banner.svg" %>)">
  <div class="container h-100">
    <div class="row d-flex align-items-center h-100">
      <div class="col-md-12 text-center">
        <h2 class="h1 font-weight-bold">Transaction History</h2>
        <nav class="mt-15" aria-label="breadcrumb">
          <ol class="breadcrumb font-weight-bold bg-transparent p-0 justify-content-center">
            <li class="breadcrumb-item"><%= link_to "Back",:back, class: "text-black-300" %></li>
            <li class="breadcrumb-item text-primary" aria-current="page">History</li>
          </ol>
        </nav>
      </div>
    </div>
  </div>

  <div class="shape-1 bg-secondary shape-xs rounded-circle"></div>
  <div class="shape-2 bg-primary shape-xs-2 rounded-circle"></div>
  <div class="shape-3 bg-primary shape-sm-2 rounded-circle"></div>
  <div class="shape-4 bg-tertiary shape-xs rounded-circle"></div>
  <div class="shape-5 bg-tertiary shape-xs rounded-circle"></div>
  <div class="shape-6 bg-primary shape-sm rounded-circle"></div>
  <div class="shape-7 bg-primary shape-xs-2 rounded-circle"></div>
  <div class="shape-8 bg-secondary shape-xs rounded-circle"></div>
</section>
<!-- end of page-header -->
  
<section class="section-padding pb-0" data-aos="fade-in" data-aos-delay="150">
  <div class="container">
    <% unless @ress.present?  %>
      <p class="text-center mb-5">You don't have any transaction.</p>
    <% else %>

    <h5><strong><%= pluralize(@ress.count, "Transaction") %> made.</strong></h5>

    <div class="container table-responsive mt-5 mb-5">
      <div class="row">
        <div class="col-12">
          <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th scope="col">Date</th>
                <th scope="col">Reference</th>
                <th scope="col">Status</th>
                <th scope="col">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @ress.each do |detail| %>
                <tr>
                  <th scope="row"><%= detail.created_at.strftime('%d/%m/%Y') %></th>
                  <td><%= detail.reference %></td>
                  <td><%= detail.status %></td>
                  <td>
                    <%= link_to fa_icon("eye", title: "View", class: "text-primary inv-link1 mr-2 mb-2", style: "font-size: 20px;"), details_transaction_path(detail.id) %>
                    <%#= link_to fa5_icon("trash", title: "Delete", class: "text-danger inv-link3 mt-4 mr-2 mb-2", style: "font-size: 20px;"), [@transaction, detail], method: :delete, data: { confirm: 'Are you sure?' } %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</section>