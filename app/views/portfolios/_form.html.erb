<header class="section-header mb-5" style="padding-top: 50px;"></header>

<%= form_for ([@enterprise, @portfolio]) do |form| %>
  <% if portfolio.errors.any? %>
    <div id="error_explanation" class="text-center text-danger">
      <h4>Oops! You've got <%= pluralize(portfolio.errors.count, "error") %></h4>
      <ul>
        <% portfolio.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <section class="profile-account-setting">
		<div class="container">
			<div class="account-tabs-setting">
				<div class="row">
					<div class="col-lg-3">
						<div class="acc-leftbar">
							<div class="nav nav-tabs" id="nav-tab" role="tablist">
								<a class="nav-item nav-link active" id="nav-title-tab" data-toggle="tab" href="#nav-title" role="tab" aria-controls="nav-title" aria-selected="true">Title</a>
								<a class="nav-item nav-link" id="nav-description-tab" data-toggle="tab" href="#nav-description" role="tab" aria-controls="nav-description" aria-selected="false">Description</a>
								<a class="nav-item nav-link" id="nav-location-tab" data-toggle="tab" href="#nav-location" role="tab" aria-controls="nav-location" aria-selected="false">Location</a>
                <a class="nav-item nav-link" id="nav-image-tab" data-toggle="tab" href="#nav-image" role="tab" aria-controls="nav-image" aria-selected="false">Image</a>
                </div>
							</div><!--acc-leftbar end-->
						</div>
						<div class="col-lg-9">
							<div class="tab-content" id="nav-tabContent">
								<div class="tab-pane fade show active" id="nav-title" role="tabpanel" aria-labelledby="nav-title-tab">
									<div class="acc-setting">
										<h3>Title</h3>
											<div class="cp-field">
												<div class="cpp-fiel">
													<%= form.text_field :title, class: "form-control", placeholder: "Enter Title"  %>
                          <%#= tinymce %>
												</div>
											</div>
											<div class="save-stngs">
												<ul>
													<li><%= form.submit 'Submit', class: "actions btn rounded btn-primary" %></li>
													<li><%= link_to 'Back', :back, class: "btn btn-secondary rounded"  %></li>
												</ul>
											</div><!--save-stngs end-->
									</div><!--acc-setting end-->
								</div>
							  	<div class="tab-pane fade" id="nav-description" role="tabpanel" aria-labelledby="nav-description-tab">
							  		<div class="acc-setting">
							  			<h3>Description</h3>	
											<div class="cp-field">
												<div class="cpp-fiel">
													<%= form.text_area :description, placeholder: "Enter Description", class: "form-control" %>
                          <%#= tinymce %>
												</div>
											</div>
											<div class="save-stngs pd2">
												<ul>
													<li><%= form.submit 'Submit', class: "actions btn rounded btn-primary" %></li>
													<li><%= link_to 'Back', :back, class: "btn btn-secondary rounded"  %></li>
												</ul>
											</div><!--save-stngs end-->
										
							  		</div><!--acc-setting end-->
							  	</div>
							  		
							  	<div class="tab-pane fade" id="nav-location" role="tabpanel" aria-labelledby="nav-location-tab">
							  		<div class="acc-setting">
							  			<h3>Location</h3>
							  			<div class="cp-field">
												<div class="cpp-fiel">
													<%= form.text_field :location, placeholder: "Enter location", class: "form-control tinymce" %>
                          <%= tinymce %>
												</div>
											</div>
                      <div class="field">
                        <%= form.hidden_field :enterprise_id %>
                      </div>
											<div class="save-stngs pd2">
												<ul>
                          <li><%= form.submit 'Submit', class: "actions btn rounded btn-primary" %></li>
													<li><%= link_to 'Back', :back, class: "btn btn-secondary rounded"  %></li>
												</ul>
											</div><!--save-stngs end-->
							  		</div><!--acc-setting end-->
							  	</div>
                  <div class="tab-pane fade" id="nav-image" role="tabpanel" aria-labelledby="nav-image-tab">
							  		<div class="acc-setting">
							  			<h3>Upload Image</h3>
							  			<div class="requests-list">
							  				<div class="request-details">
							  					<div class="noty-user-img">
							  						<% if @portfolio.image %>
															<%= image_tag @portfolio.image, skip_pipeline: true, style: "width: 32px;", class: "rounded-circle mr-2" %>
														<% else %>
															<%= image_tag 'avatar.png', style: "width: 32px;", class: "rounded-circle mr-2" %>
														<% end %>
							  					</div>
							  					<div class="request-info">
							  						<h3>Upload Portfolio Image</h3>
							  						<span>100 x 100 pixels</span>
							  					</div>
							  					<div class="accept-feat">
							  						<ul>
							  							<li><%= form.file_field :image, onchange: "validateFiles(this);", data: { max_file_size: 1.megabytes } %></li>
							  						</ul>
							  					</div><!--accept-feat end-->
													<div class="save-stngs pd2">
														<ul>
                              <li><%= form.submit "Submit", class: "btn btn-primary" %></li>
                              <li><%= link_to "Back", :back, class: "btn btn-secondary" %></li>
														</ul>
													</div><!--save-stngs end-->
							  				</div><!--request-detailse end-->
							  			</div><!--requests-list end-->
							  		</div><!--acc-setting end-->
							  	</div>
							</div>
						</div>
					</div>
				</div><!--account-tabs-setting end-->
			</div>
	</section>
<% end %>

