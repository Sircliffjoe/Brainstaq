<% if @email.errors.any? %>
  <% @email.errors.each do |error| %>
    <% if error.attribute == :email_address %>
      document.getElementById("error-field-email-address").innerHTML = "<%= j render "shared/validation_error", type: "email_address" %>"
    <% end %>
  <% end %>
<% else %>
  document.getElementById("emailModalContainer").setAttribute("x-data", "{ 'showEmailModal': false }")
  document.getElementById("notice").innerHTML = "<%= j render "notice" %>"
  document.getElementById("notice-mobile").innerHTML = "<%= j render "notice", phone: true %>"
  document.getElementById("email_address").value = "" 
<% end %>