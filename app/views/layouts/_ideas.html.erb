<% @ideas.in_groups_of(3) do |group| %>
          <div class="site-section ideas-entry-wrap" style="margin-top: 0px; ">
            <div class="container">
              <div class="row">
                <% group.compact.each do |idea| %>
                  <div class="col-md-4">
                    <div class="idea card">
                      <figure class="m-0">
                        <%= image_tag idea.image_url, width:'338px', height:'230px' if idea.image.present?  %>
                      </figure>
                      <div class="idea-inner-text py-4 px-4">
                        <span class="idea-category">
                          <% if idea.category %>
                          <%= idea.category.name %>
                          <% else %>
                          <%= 'General' %>
                          <% end %>
                        </span>
                        <div class="meta"><span class="fas fa-map-marker-alt mr-2 ml-0"></span><%= idea.user.country %></div>
                          <h3 class="mb-2"><%= link_to idea.title, idea, class: 'text-dark', style: "font-weight: bold;" %></h1>
                          <div class="progress mt-0" style="height: 10px; width: 100%;">
                            <div class="progress-bar" role="progressbar" style="width: 75%;" aria-valuenow="25" 
                              aria-valuemin="0" aria-valuemax="100"><small>75%</small>
                            </div>
                          </div>
                          <p class="mb-0 mt-3 display-7">
                            <%= truncate idea.description, length: 100 %>
                          </p> 
                        </div>
                        <div class="d-flex border-top stats">
                          <div class="py-3 px-4">
                            <span class="fa fa-comments"></span> <%= idea.comments.size %> comments
                          </div>
                          <div class="py-3 px-4 w-25 ml-auto border-left">
                            <span class="fa fa-thumbs-up"></span> 2
                          </div>
                          <div class="py-3 px-4 w-25 ml-auto border-left">
                            <span class="fa fa-thumbs-down"></span> 2
                          </div>
                        </div>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>