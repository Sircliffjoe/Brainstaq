<div class="p-6 mb-5 rounded nested-fields row g-3">

  <%= form.hidden_field :_destroy %>

  <div class="mb-6 mt-3 col-sm-12 form-group">
    <label class="form-label">Position</label>
    <%= form.text_field :title, class: "form-control", placeholder: "Enter postion"  %>
  </div>
  <div class="col-md-6 mt-3">
  <label class="form-label">Base Annual Salary</label>
    <%= form.number_field :base_annual_salary, class: "form-control", placeholder: "Enter bank interest rate"  %>
  </div>
  <div class="col-md-6 mt-3">
    <label class="form-label">Number of Employees in Year One</label>
    <%= form.number_field :number_of_employees_one, class: "form-control", placeholder: "Enter bank interest rate"  %>
  </div>
  <div class="col-md-6 mt-3">
    <label class="form-label">Number of Employees in Year Two</label>
    <%= form.number_field :number_of_employees_two, class: "form-control", placeholder: "Enter bank interest rate"  %>
  </div>
  <div class="col-md-6 mt-3">
    <label class="form-label">Number of Employees in Year Three</label>
    <%= form.number_field :number_of_employees_three, class: "form-control", placeholder: "Enter inflation rate"  %>
  </div>
    <div class="col-md-6 mt-3">
    <label class="form-label">Number of Employees in Year Four</label>
    <%= form.number_field :number_of_employees_four, class: "form-control", placeholder: "Enter inflation rate"  %>
  </div>
  <div class="col-md-6 mt-3">
    <label class="form-label">Number of Employees in Year Five</label>
    <%= form.number_field :number_of_employees_five, class: "form-control", placeholder: "Enter percentage benefits of Salary"  %>
  </div>

  <div class="mb-6 col-sm-12 form-group">
    <%= form.hidden_field :financial_plan_id, placeholder: "0", class: "input form-control" %>
  </div>

  <%= link_to "Remove", "#", data: { action: "click->nested-form#remove_association" }, class: "text-primary underline text-sm col-sm-12" %>
</div>