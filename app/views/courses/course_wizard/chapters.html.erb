<%= render layout: 'courses/course_wizard/step' do %>
  <%= simple_form_for @course, url: course_course_wizard_path, method: :put do |f| %>
    <h2>Chapters</h2>
    <%= f.simple_fields_for :chapters do |chapter_form| %>
      <%= render 'chapter_fields', f: chapter_form %>
    <% end %>
    <div class="links">
      <p>
        <%= link_to_add_association 'add chapter +', f, :chapters, class: 'btn btn-sm btn-primary' %>
      </p>
    </div>
    <p></p>
    
    <%= f.button :submit, "Save & Continue", class: "actions btn btn-primary rounded mt-3" %>
  <% end %>
<% end %>