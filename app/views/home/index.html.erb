<% content_for :title, "Share and Discover Disruptive Ideas" %>


<!--==========================
    Intro Section
============================-->
<section id="intro" class="clearfix">
  <div class="container d-flex h-100">
    <div class="row justify-content-center align-self-center">
      <div class="col-md-6 intro-info order-md-first order-last">
        <h4 style="margin-top: 150px; font-family: Arial; font-size: 14px;" class="mb-2">SETUP YOUR BUSINESS</h4>
        <h2 style="font-family: Arial;" class="mb-2">Bring your ideas to life with <span> Brainstaq!</span></h2>
        <h3 style="margin-top: 0px; font-family: Arial; font-size: 24px;">Create, analyze and manage your business documents</h3>
        <div>
      		
          <% if user_signed_in? && current_user.subscribed_to_plan? %>
            <%#= button_to 'Get Started', plan_subscriptions_path(:code => post['plan_code'], :interval=> post['interval']), method: :post, class:"btn btn-success" %>
            <%= link_to 'EXPLORE TOOLS', '#', class: "btn rounded text-white", style: "font-size: 14px; font-weight: bold;" %>
          <% elsif user_signed_in? %>
            <%= link_to 'SETUP ENTERPRISE', new_plan_subscription_path, class: "btn rounded text-white", style: "font-size: 14px; font-weight: bold;" %>
          <% else %>
            <%= link_to 'GET STARTED', new_user_registration_path, class: "btn rounded text-white", style: "font-size: 14px; font-weight: bold;" %>
          <% end %>
          
        </div>
      </div>
      
      <div class="col-lg-4 ml-auto form-box" data-aos="fade-up" data-aos-delay="500" style="margin-top: 100px; margin-bottom: 50px;">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <small><%= render "devise/shared/error_messages", resource: resource %></small>
          
          <h5 class="text-center" style="font-size: 16px;">Discover Disruptive Ideas<br>
            <span class="text-black" style="font-weight: bold; font-size: 22px;" > Join Now!</span>
          </h5>
          
          <div class="form-group">
            <%= f.text_field :last_name, required: true, class: "form-control", placeholder: "Last Name" %>
          </div>
          
          <div class="form-group">
            <%= f.text_field :first_name, required: true, class: "form-control", placeholder: "First Name" %>
          </div>

          <div class="form-group">
            <%= f.text_field :username, required: true, class: "form-control", placeholder: "Username" %>
          </div>

          <div class="form-group">
            <%= f.select :country, options_for_select([
            # ['Algeria'],
