  <% @enterprises.in_groups_of(3) do |group| %>
    <div class="container mb-3">
      <div class="row">
        <% group.compact.each do |enterprise| %>
          
          <div class="col-xs-12 col-sm-6 col-md-4">
            <div class="image-flip" >
              <div class="mainflip flip-0">
                <div class="frontside">
                  <div class="card">
                    <div class="card-body">
                      <p><%= image_tag enterprise.image_url, width:'flex', height:'60px' if enterprise.image.present?  %></p>
                      
                      <p class="card-text text-muted mt-2 mb-4">
                        <a href="<%= enterprise_url(enterprise) %>" class="text-decoration-none text-dark">
                          <h3 class="mb-1"><%= link_to enterprise.name.titleize, enterprise, class: 'text-dark', style: "font-weight: bold; font-size: 16px;" %></h3> 
                          <%= truncate(sanitize(enterprise.info, tags: []), length: 70) %>
                        </a>
                      </p>
                    
                      <div class="d-flex flex-row justify-content-between">
                        <div class="d-flex flex-row justify-content-center mt-5">
                          <small class="text-muted"><i class="fas fa-map-marker-alt mr-1"></i> <%= enterprise.state %>, <%= enterprise.country %></small>
                        </div>
                        <small class="pt-2 mt-5">
                          <span class="idea-category text-primary" style="font-size: 12px; font-weight: bold;">
                            <% if enterprise.category %>
                              <%= enterprise.category.name %>
                            <% else %>
                              <%= 'General' %>
                            <% end %>
                          </span>
                        </small>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="backside">
                  <div class="card">
                    <div class="card-body mt-0">
                      <p class="card-text text-muted mt-2 mb-4">
                        <a href="<%= enterprise_url(enterprise) %>" class="text-decoration-none text-dark">
                          <h3 class="mb-1"><%= link_to enterprise.name.titleize, enterprise, class: 'text-dark', style: "font-weight: bold; font-size: 16px;" %></h3> 
                          <%= truncate(sanitize(enterprise.info, tags: []), length: 178) %>
                        </a>
                      </p>

                      <div class="d-flex flex-row justify-content-between mt-3">
                        <div class="d-flex flex-row justify-content-center mt-3">
                          
                          <div class="social-links mt-2">
                            <% if enterprise.website_url.present? %>
                              <%= link_to (enterprise.website_url), target: "_blank", title: "#{enterprise.website_url}" do %>
                                <i class="fas fa-globe mr-1"></i>
                              <% end %>
                            <% end %>

                            <% if enterprise.facebook_url.present? %>
                              <%= link_to (enterprise.facebook_url), target: "_blank", title: "#{enterprise.facebook_url}" do %>
                                <i class="fab fa-facebook mr-1"></i>
                              <% end %>
                            <% end %>

                            <% if enterprise.twitter_url.present? %>
                              <%= link_to (enterprise.twitter_url), target: "_blank", title: "#{enterprise.twitter_url}" do %>
                                <i class="fab fa-twitter mr-1"></i>
                              <% end %>
                            <% end %>

                            <% if enterprise.instagram_url.present? %>
                              <%= link_to (enterprise.instagram_url), target: "_blank", title: "#{enterprise.instagram_url}" do %>
                                <i class="fab fa-instagram mr-1"></i>
                              <% end %>
                            <% end %>
                          </div>
                        </div>

                        <small class="pt-2 mt-3">
                          <span class="fa fa-star"></span>
                          <span class="fa fa-star"></span>
                          <span class="fa fa-star"></span>
                          <span class="fa fa-star"></span>
                          <span class="fa fa-star"></span>
                        </small>
                      </div>

                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

        <% end %>

      </div>
    </div>
  <% end %>

  <style>
    .container > .row {
      clear: both;
    }

    .btn-primary:hover,
    .btn-primary:focus {
      background-color: #108d6f;
      border-color: #108d6f;
      box-shadow: none;
      outline: none;
    }

    .btn-primary {
      color: #fff;
      background-color: #007b5e;
      border-color: #007b5e;
    }

    /* section {
      padding: 60px 0;
    } */

    .image-flip:hover .backside,
    .image-flip.hover .backside {
      -webkit-transform: rotateY(0deg);
      -moz-transform: rotateY(0deg);
      -o-transform: rotateY(0deg);
      -ms-transform: rotateY(0deg);
      transform: rotateY(0deg);
      border-radius: .25rem;
    }

    .image-flip:hover .frontside,
    .image-flip.hover .frontside {
      -webkit-transform: rotateY(180deg);
      -moz-transform: rotateY(180deg);
      -o-transform: rotateY(180deg);
      transform: rotateY(180deg);
    }

    .mainflip {
      -webkit-transition: 1s;
      -webkit-transform-style: preserve-3d;
      -ms-transition: 1s;
      -moz-transition: 1s;
      -moz-transform: perspective(1000px);
      -moz-transform-style: preserve-3d;
      -ms-transform-style: preserve-3d;
      transition: 1s;
      transform-style: preserve-3d;
      position: relative;
    }

    .frontside {
      position: relative;
      -webkit-transform: rotateY(0deg);
      -ms-transform: rotateY(0deg);
      z-index: 2;
      margin-bottom: 20px;
    }

    .backside {
      position: absolute;
      top: 0;
      margin-bottom: 30px;
      left: 0;
      background: white;
      -webkit-transform: rotateY(-180deg);
      -moz-transform: rotateY(-180deg);
      -o-transform: rotateY(-180deg);
      -ms-transform: rotateY(-180deg);
      transform: rotateY(-180deg);
      -webkit-box-shadow: 5px 7px 9px -4px rgb(158, 158, 158);
      -moz-box-shadow: 5px 7px 9px -4px rgb(158, 158, 158);
      box-shadow: 5px 7px 9px -4px rgb(158, 158, 158);
    }

    .frontside,
    .backside {
      -webkit-backface-visibility: hidden;
      -moz-backface-visibility: hidden;
      -ms-backface-visibility: hidden;
      backface-visibility: hidden;
      -webkit-transition: 1s;
      -webkit-transform-style: preserve-3d;
      -moz-transition: 1s;
      -moz-transform-style: preserve-3d;
      -o-transition: 1s;
      -o-transform-style: preserve-3d;
      -ms-transition: 1s;
      -ms-transform-style: preserve-3d;
      transition: 1s;
      transform-style: preserve-3d;
    }

    .frontside .card,
    .backside .card {
      /* min-height: 300px; */
    }

    .backside .card a {
      font-size: 18px;
      color: #000000;
    }

    .frontside .card .card-title,
    .backside .card .card-title {
      color: #000000 !important;
    }

    </style> 