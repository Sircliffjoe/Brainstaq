<% content_for :title do %>
  <%= @course.title %> | Edit Lesson
  <%= @lesson.title %>
<% end %>

<i class="fa fa-graduation-cap"></i>
<%= link_to course_path(@course) do %>
  <%= @course.title %>
<% end %>
|
<i class="fa fa-check-square"></i>
<%= link_to course_lesson_path(@course, @lesson, anchor: "current_lesson") do %>
  <%= @lesson.title %>
<% end %>
|
<%= link_to 'Edit Lesson', edit_course_lesson_path(@course, @lesson) %>

<div class="card shadow">
  <div class="card-header">
    <h3>
      <i class="far fa-check-square"></i>
      Edit lesson
    </h3>
  </div>
  <div class="card-body">
    <%= render 'form' %>
  </div>
  <div class="card-footer">
    <%= link_to 'Show lesson', course_lesson_path(@course, @lesson, anchor: "current_lesson") %>
    |
    <%= link_to 'Back to course', course_path(@lesson.course) %>
  </div>
</div>