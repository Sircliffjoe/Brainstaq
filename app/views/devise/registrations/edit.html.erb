													<li><%= link_to "Cancel", :back, class: "btn btn-secondary" %></li>
												</ul>
											</div><!--save-stngs end-->
							  		</div><!--acc-setting end-->
							  	</div>
							  	
									<div class="tab-pane fade" id="nav-password" role="tabpanel" aria-labelledby="nav-password-tab">
