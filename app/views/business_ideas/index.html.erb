<% content_for :title, "Generated Business Ideas" %>

<!-- start of page-header -->
<section class="page-header bg-light-gray has-shapes has-bg-brash bg-brash-bottom" style="background-image: url(<%= image_path "banner.svg" %>)">
  <div class="container h-100">
      <div class="row d-flex align-items-center h-100">
          <div class="col-md-12 text-center">
              <h2 class="h1 font-weight-bold">Generated Business Ideas</h2>
              <nav class="mt-15" aria-label="breadcrumb">
                  <ol class="breadcrumb font-weight-bold bg-transparent p-0 justify-content-center">
                      <li class="breadcrumb-item"><%= link_to "Home", root_path, class: "text-black-300" %></li>
                      <li class="breadcrumb-item text-primary" aria-current="page">Generated Business Ideas</li>
                  </ol>
              </nav>
          </div>
      </div>
  </div>

  <div class="shape-1 bg-secondary shape-xs rounded-circle"></div>
  <div class="shape-2 bg-primary shape-xs-2 rounded-circle"></div>
  <div class="shape-3 bg-primary shape-sm-2 rounded-circle"></div>
  <div class="shape-4 bg-tertiary shape-xs rounded-circle"></div>
  <div class="shape-5 bg-tertiary shape-xs rounded-circle"></div>
  <div class="shape-6 bg-primary shape-sm rounded-circle"></div>
  <div class="shape-7 bg-primary shape-xs-2 rounded-circle"></div>
  <div class="shape-8 bg-secondary shape-xs rounded-circle"></div>
</section>

<main style="padding-top: 100px; background-color: #fff;">
  <div class="container-fluid project-img col-lg-10" style="margin-bottom: 100px;">
    <div class="container">
      <% if @generated_ideas.present? %>
        <h3 class="mb-5">We found some business ideas for you!</h3>
        <div class="row">
          <% @generated_ideas.each_slice(3) do |ideas_row| %>
            <% ideas_row.each do |generated_idea| %>
              <div class="col-md-4 mb-3">
                <div class="card hover-effect">  <div class="card-body">
                    <h5 class="card-title font-weight-bold"><%= generated_idea.name %></h5>
                    <p class="card-text"><%= truncate(strip_tags(generated_idea.description), length: 250) %></p>
                    <%= link_to 'View', business_idea_path(generated_idea), class: 'btn btn-sm btn-primary mt-2' %>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      <% else %>
        <h3>Gotta give it another shot!</h3>
      <% end %>
    </div>
  </div>
</main>

<style>
.hover-effect:hover {
  box-shadow: 0px 3px 6px rgba(0, 0, 0, 0.1);
  transform: translateY(-2px); /* Slight card lift on hover */
  transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
}

.card {
  border-radius: 5px; /* Applied border-radius */
}
</style>
