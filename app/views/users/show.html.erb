<main style="padding-top: 100px; background-color: #f2f2f2;">
  <div class="main-section">
    <div class="container">
      <div class="main-section-data">
        <div class="row">
          <div class="col-lg-3 col-md-4 pd-left-none no-pd">

			    <%= render partial: 'layouts/follow' %> 
	      </div>
        
        
            <div class="col-lg-6 col-md-8 no-pd">
			        <div class="main-ws-sec">
            
            <div class="post-topbar">
				      <div class="user-picy">
					      <%= image_tag 'user-pic.jpg', style: "width: 50px;", class: "rounded-circle" %>
				      </div>
				      <div class="post-st">
				        <ul>
                  <%= link_to 'New Idea', new_idea_path, class: "btn btn1 rounded-pill text-white float-right", style: "margin-right: 13px;" %>
				        </ul>
			        </div><!--post-st end-->
            </div><!--post-topbar end-->

            <% @ideas.each do |idea| %>
            <div class="posts-section">
              <div class="post-bar">
                <div class="post_topbar">
                  <div class="usy-dt">
                    <%= image_tag 'user-pic.jpg', style: "width: 40px;", class: "rounded-circle ml-1" %>
                    <div class="usy-name">
                      <h3><%= current_user.full_name %></h3>
                      <span class="ml-1"><i class="fas fa-clock mr-1"></i>Posted <%= time_ago_in_words(idea.created_at) %> ago</span>
                    </div>
                  </div>
                  <div class="dropdown ml-1 float-right" style="font-size: 20px;">
                    <a class="dropdown-toggle fas fa-ellipsis-v" href="#" role="button" id="dropdownMenuLink" 
                      data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    </a>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuLink" style="font-size: 12px;">
                      <%= link_to "Edit Idea", edit_idea_path(idea), class: "dropdown-item" %>
                      <%= link_to "Share", "#", class: "dropdown-item" %>
                      <%= link_to "Delete", idea, :method => 'delete', data: { confirm: 'Are you sure?' }, class: "dropdown-item" %>
                    </div>
                  </div>
                
                  </div>
                  <div class="epi-sec">
                    <ul class="descp" style="font-size: 12px;">
                      <li><i class="fas fa-map-marker-alt"></i>  Nigeria</li>
                      <li><i class="fas fa-list-alt"></i>  Technology</li>
                    </ul>
                  </div>
                  <div class="job_descp">
                    <h3><%= link_to idea.title, idea %></h3>
                    <%= image_tag idea.image_url, style: "height: 150px; object-fit: cover;", class: "card-img-top" %>
                    <p class="mt-3 mb-0"><%= truncate idea.description, length: 200 %></p>
                  </div>
            
                  <div class="job-status-bar" style="margin-bottom: -15px;">
                     <ul class="like-com">
                      <li><a href="#"><i class="fa fa-thumbs-up"></i>  25</a></li> 
                      <li><a href="#"><i class="fa fa-thumbs-down"></i>  11</a></li>
                      <li><a href="#"><i class="fa fa-comments"></i>  <%= idea.comments.size %></a></li> 
                      <li><a href="#"><i class="fas fa-share"></i>  3</a></li>
                    </ul>
                    <a><i class="fa fa-filter"></i> Relevance: <strong>50%</strong></a>
                  </div>
                  </div><!--post-bar end-->
              </div><!--posts-section end-->
            <% end %>
          </div><!--main-ws-sec end-->
            

			    </div>
          <div class="col-sm-3 pd-right-none no-pd">
		    	  <div class="right-sidebar">
				      <div class="user-data full-width"  style="width: 280px;">
				        <div class="user-profile">
					        <div class="username-dt">
					          <div class="usr-pic rounded-circle">
						          <%= image_tag 'user-pic.jpg'%>
					          </div>
					        </div><!--username-dt end-->
												  
					        <div class="user-specs">
					          <h3 class="mb-0"><%= current_user.full_name %></h3>
                    <h6 class="mb-0 mt-0 p-2 text-muted" style="font-size: 12px;"><%= current_user.bio %></h6>
                      <div class="social-links" style="margin-bottom: -20px;">
                        <a href="#"><i class="fab fa-twitter m-1"></i></a>
                        <a href="#"><i class="fab fa-facebook m-1"></i></a>
                        <a href="#"><i class="fab fa-instagram m-1"></i></a>
                        <a href="#"><i class="fab fa-linkedin m-1"></i></a>
                      </div>
					        </div>
				        </div><!--user-profile end-->
				 
				        <ul class="user-fw-status" style="margin-bottom: 0px;">
					        <li>
					          <%= link_to 'View Profile', profile_path(current_user.full_name)%>
					        </li>
				        </ul>
				      </div><!--user-data end-->
			        

                <%= render partial: "layouts/trending", locals: { ideas: @ideas} %>
	              
							  </div><!--widget-jobs end-->
	            </div><!--right-sidebar end-->
	          </div>
	        </div>
	      </div><!-- main-section-data end-->
	    </div> 
	  </div>    
  </main>
