<div class="nested-fields">
  <%= form.hidden_field :_destroy %>

  <div class="card">
    <div class="card-body">
      <div class="row mt-2">
  
        <div class="col-sm-6 pb-3">
          <label for="exampleAccount">Feature Name</label>
          <%= form.text_field :name, class: "form-control"  %>
        </div>

        <div class="col-sm-6 pb-3">
          <label for="exampleCtrl">Description</label> 
          <%= form.text_field :description, class: "form-control" %>
        </div>
  
      </div>
    </div>
    <div class="card-footer">
      <div class="float-right">
        <%= link_to "Remove", "#", data: { action: "click->nested-form#remove_association" }, class: "text-primary underline text-sm col-md-3 mt-3 ml-3 mr-3" %>
      </div>
    </div>
  </div>
</div>
