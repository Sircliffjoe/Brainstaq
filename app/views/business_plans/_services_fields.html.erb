<div class="p-6 mb-5 rounded nested-fields row g-3">

  <%= form.hidden_field :_destroy %>

  <div class="mb-6 mt-3 col-sm-12 form-group">
    <label class="form-label">Service Name</label>
    <%= form.text_field :title, class: "form-control", placeholder: "Enter product name"  %>
  </div>
  <div class="col-md-6 mt-3">
  <label class="form-label">Service Description</label>
    <%= form.text_area :description, class: "form-control", placeholder: "Enter product description"  %>
  </div>
  <div class="col-md-6 mt-3">
    <label class="form-label">Price</label>
    <%= form.number_field :price, class: "form-control", placeholder: "Enter bank interest rate"  %>
  </div>
  <div class="col-md-6 mt-3">
    <label class="form-label">Service Image</label>
    <%= form.file_field :image, onchange: "validateFiles(this);", data: { max_file_size: 1.megabytes } %>
  </div>

  <div class="mb-6 col-sm-12 form-group">
    <%#= form.hidden_field :financial_plan_id, placeholder: "0", class: "input form-control" %>
  </div>

  <%= link_to "Remove Service", "#", data: { action: "click->nested-form#remove_association" }, class: "text-primary underline text-sm col-sm-12" %>
</div>