<header class="section-header mb-5"></header>

<%= form_for ([@enterprise, @pitch_deck]) do |form| %>
  <% if pitch_deck.errors.any? %>
    <div id="error_explanation" class="text-center text-danger">
      <h4>Oops! You've got <%= pluralize(pitch_deck.errors.count, "error") %></h4>
      <ul>
        <% pitch_deck.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="text-danger text-center mb-3" id="error_explanation">
		<% if @quota_warning.present? %>
			<span><%= @quota_warning %></span>
		<% end %>
	</div>

  <section class="profile-account-setting">
		<div class="container">
			<div class="account-tabs-setting">
				<div class="row">
					<div class="col-lg-3">
						<div class="acc-leftbar">
							<div class="nav nav-tabs" id="nav-tab" role="tablist">
								<a class="nav-item nav-link active" id="nav-introduction-tab" data-toggle="tab" href="#nav-introduction" role="tab" aria-controls="nav-introduction" aria-selected="true">Introduction</a>
								<a class="nav-item nav-link" id="nav-offering-tab" data-toggle="tab" href="#nav-offering" role="tab" aria-controls="nav-offering" aria-selected="false">The Offering</a>
								<a class="nav-item nav-link" id="nav-market-tab" data-toggle="tab" href="#nav-market" role="tab" aria-controls="nav-market" aria-selected="false">The Market</a>
                <a class="nav-item nav-link" id="nav-strategies-tab" data-toggle="tab" href="#nav-strategies" role="tab" aria-controls="nav-strategies" aria-selected="false">Strategies</a>
                <a class="nav-item nav-link" id="nav-conclusion-tab" data-toggle="tab" href="#nav-conclusion" role="tab" aria-controls="nav-conclusion" aria-selected="false">Conclusion</a>
								</div>
							</div><!--acc-leftbar end-->
						</div>
						<div class="col-lg-9">
							<div class="tab-content" id="nav-tabContent">
                <div class="tab-pane fade show active" id="nav-introduction" role="tabpanel" aria-labelledby="nav-introduction-tab">
                  <div class="acc-setting">
                    <h3>Introduction</h3>	
                    <div class="cp-field">
                      <h5>Introduction
                        <details>
                          <summary class="text-info" style="font-size:12px; font-style: italic; margin-bottom: 0px;">Tip!</summary>
                          <p class="text-info mt-1" style="font-size:11px; font-style: italic;">
                          Begin with a brief introduction to your company and the purpose of the presentation. 
                          This sets the stage for what the audience can expect.
                          </p>
                        </details>
                      </h5>
                      <div class="cpp-fiel">
                        <%= form.text_area :introduction, placeholder: "Enter introduction", class: "form-control" %>
                        <%#= tinymce %>
                      </div>
                    </div>
                    <div class="cp-field">
                      <h5>Elevator Pitch
                        <details>
                          <summary class="text-info" style="font-size:12px; font-style: italic; margin-bottom: 0px;">Tip!</summary>
                          <p class="text-info mt-1" style="font-size:11px; font-style: italic;">
                            This is a concise and compelling summary of your business idea, 
                            usually delivered in 30 seconds to 1 minute. It should highlight 
                            the problem you solve, your solution, and what makes your business unique. 
                          </p>
                        </details>
                      </h5>
                      <div class="cpp-fiel">
                        <%= form.text_area :elevator_pitch, placeholder: "Enter elevator pitch", class: "form-control" %>
                        <%#= tinymce %>
                      </div>
                    </div>
                    <div class="cp-field">
                      <h5>Mission
                        <details>
                      <summary class="text-info" style="font-size:12px; font-style: italic; margin-bottom: 0px;">Tip!</summary>
                      <p class="text-info mt-1" style="font-size:11px; font-style: italic;">
                        Clearly state your company's mission statement, which describes its core purpose and values. 
                        This helps align your audience with your vision and goals.
                      </p>
                    </details>
                      </h5>
                      <div class="cpp-fiel">
                        <%= form.text_area :mission, placeholder: "Enter mission", class: "form-control" %>
                        <%#= tinymce %>
                      </div>
                    </div>
                    <div class="save-stngs pd2">
                      <ul>
                        <% if pitch_deck.new_record? %>
                          <li><%= form.submit 'Create Pitch', class: "actions btn rounded btn-primary" %></li>
                          <li><%= link_to 'Back', :back, class: "btn btn-secondary rounded" %></li>
                        <% else %>
                          <li><%= form.submit 'Update', class: "actions btn rounded btn-primary" %></li>
                          <li><%= link_to 'Back', :back, class: "btn btn-secondary rounded" %></li>
                        <% end %>
                      </ul>
                    </div><!--save-stngs end-->
                  </div><!--acc-setting end-->
                </div>
							  		
                <div class="tab-pane fade" id="nav-offering" role="tabpanel" aria-labelledby="nav-offering-tab">
                  <div class="acc-setting">
                    <h3>The Offering</h3>	
                    <div class="cp-field">
                      <h5>Problem
                        <details>
                          <summary class="text-info" style="font-size:12px; font-style: italic; margin-bottom: 0px;">Tip!</summary>
                          <p class="text-info mt-1" style="font-size:11px; font-style: italic;">
                          Identify and articulate the problem or pain point your target market faces. 
                          Provide evidence or examples to illustrate the severity and significance of the problem.
                          </p>
                        </details>
                      </h5>
                      <div class="cpp-fiel">
                        <%= form.text_area :problem, placeholder: "Enter problelm(s)", class: "form-control" %>
                        <%#= tinymce %>
                      </div>
                    </div>
                    <div class="cp-field">
                      <h5>Solution
                        <details>
                          <summary class="text-info" style="font-size:12px; font-style: italic; margin-bottom: 0px;">Tip!</summary>
                          <p class="text-info mt-1" style="font-size:11px; font-style: italic;">
                            Present your solution to the problem. Explain how your product or service addresses the pain points 
                            identified earlier and provides value to your target customers. 
                          </p>
                        </details>
                      </h5>
                      <div class="cpp-fiel">
                        <%= form.text_area :solution, placeholder: "Enter solution(s)", class: "form-control" %>
                        <%#= tinymce %>
                      </div>
                    </div>
                    <div class="cp-field">
                      <h5>How it Works
                        <details>
                      <summary class="text-info" style="font-size:12px; font-style: italic; margin-bottom: 0px;">Tip!</summary>
                      <p class="text-info mt-1" style="font-size:11px; font-style: italic;">
                        Describe the functionality and features of your product or service. Use visuals or demonstrations if 
                        possible to help the audience understand how your solution works.
                      </p>
                    </details>
                      </h5>
                      <div class="cpp-fiel">
                        <%= form.text_area :how_it_works, placeholder: "How it works", class: "form-control" %>
                        <%#= tinymce %>
                      </div>
                    </div>
                    <div class="save-stngs pd2">
                      <ul>
                        <% if pitch_deck.new_record? %>
                          <li><%= form.submit 'Create Pitch', class: "actions btn rounded btn-primary" %></li>
                          <li><%= link_to 'Back', :back, class: "btn btn-secondary rounded" %></li>
                        <% else %>
                          <li><%= form.submit 'Update', class: "actions btn rounded btn-primary" %></li>
                          <li><%= link_to 'Back', :back, class: "btn btn-secondary rounded" %></li>
                        <% end %>
                      </ul>
                    </div><!--save-stngs end-->
                  </div><!--acc-setting end-->
                </div>

                <div class="tab-pane fade" id="nav-market" role="tabpanel" aria-labelledby="nav-market-tab">
                  <div class="acc-setting">
                    <h3>The Market</h3>	
                    <div class="cp-field">
                      <h5>Market Opportunity
                        <details>
                          <summary class="text-info" style="font-size:12px; font-style: italic; margin-bottom: 0px;">Tip!</summary>
                          <p class="text-info mt-1" style="font-size:11px; font-style: italic;">
                          Discuss the market opportunity for your business. This includes identifying your target market, its size, 
                          growth potential, and any trends or dynamics that make it attractive.
                          </p>
                        </details>
                      </h5>
                      <div class="cpp-fiel">
                        <%= form.text_area :market_opportunity, placeholder: "Enter market opportunity", class: "form-control" %>
                        <%#= tinymce %>
                      </div>
                    </div>
                    <div class="cp-field">
                      <h5>Market Size
                        <details>
                          <summary class="text-info" style="font-size:12px; font-style: italic; margin-bottom: 0px;">Tip!</summary>
                          <p class="text-info mt-1" style="font-size:11px; font-style: italic;">
                            Provide data and analysis on the total addressable market (TAM) for your product or service. Break down the 
                            market size by segments or demographics relevant to your business. 
                          </p>
                        </details>
                      </h5>
                      <div class="cpp-fiel">
                        <%= form.text_area :market_size, placeholder: "Enter market size", class: "form-control" %>
                        <%#= tinymce %>
                      </div>
                    </div>
                    <div class="cp-field">
                      <h5>Competitor Analysis
                        <details>
                      <summary class="text-info" style="font-size:12px; font-style: italic; margin-bottom: 0px;">Tip!</summary>
                      <p class="text-info mt-1" style="font-size:11px; font-style: italic;">
                        Analyze your competitors and their offerings. Identify their strengths, weaknesses, and market positioning relative to your business. 
                        Highlight what sets your business apart from competitors.
                      </p>
                    </details>
                      </h5>
                      <div class="cpp-fiel">
                        <%= form.text_area :competitor_analysis, placeholder: "Enter competitor analysis", class: "form-control" %>
                        <%#= tinymce %>
                      </div>
                    </div>
                    <div class="save-stngs pd2">
                      <ul>
                        <% if pitch_deck.new_record? %>
                          <li><%= form.submit 'Create Pitch', class: "actions btn rounded btn-primary" %></li>
                          <li><%= link_to 'Back', :back, class: "btn btn-secondary rounded" %></li>
                        <% else %>
                          <li><%= form.submit 'Update', class: "actions btn rounded btn-primary" %></li>
                          <li><%= link_to 'Back', :back, class: "btn btn-secondary rounded" %></li>
                        <% end %>
                      </ul>
                    </div><!--save-stngs end-->
                  </div><!--acc-setting end-->
                </div>
                
                <div class="tab-pane fade" id="nav-strategies" role="tabpanel" aria-labelledby="nav-strategies-tab">
                  <div class="acc-setting">
                    <h3>Strategies</h3>	
                    <div class="cp-field">
                      <h5>Revenue Model
                        <details>
                          <summary class="text-info" style="font-size:12px; font-style: italic; margin-bottom: 0px;">Tip!</summary>
                          <p class="text-info mt-1" style="font-size:11px; font-style: italic;">
                          Explain how your business generates revenue. This could include pricing strategies, subscription models, 
                          advertising, or any other monetization methods.
                          </p>
                        </details>
                      </h5>
                      <div class="cpp-fiel">
                        <%= form.text_area :revenue_model, placeholder: "Enter revenue model", class: "form-control" %>
                        <%#= tinymce %>
                      </div>
                    </div>
                    <div class="cp-field">
                      <h5>Traction
                        <details>
                          <summary class="text-info" style="font-size:12px; font-style: italic; margin-bottom: 0px;">Tip!</summary>
                          <p class="text-info mt-1" style="font-size:11px; font-style: italic;">
                            Showcase any milestones, achievements, or traction your business has achieved so far. This could include user growth, 
                            partnerships, sales figures, or product development milestones.
                          </p>
                        </details>
                      </h5>
                      <div class="cpp-fiel">
                        <%= form.text_area :traction, placeholder: "Enter traction", class: "form-control" %>
                        <%#= tinymce %>
                      </div>
                    </div>
                    <div class="cp-field">
                      <h5>Financials
                        <details>
                      <summary class="text-info" style="font-size:12px; font-style: italic; margin-bottom: 0px;">Tip!</summary>
                      <p class="text-info mt-1" style="font-size:11px; font-style: italic;">
                        Present your financial projections, including revenue forecasts, expenses, and profitability estimates. 
                        Provide supporting data and assumptions to justify your projections.
                      </p>
                    </details>
                      </h5>
                      <div class="cpp-fiel">
                        <%= form.text_area :financials, placeholder: "Enter financials", class: "form-control" %>
                        <%#= tinymce %>
                      </div>
                    </div>
                    <div class="save-stngs pd2">
                      <ul>
                        <% if pitch_deck.new_record? %>
                          <li><%= form.submit 'Create Pitch', class: "actions btn rounded btn-primary" %></li>
                          <li><%= link_to 'Back', :back, class: "btn btn-secondary rounded" %></li>
                        <% else %>
                          <li><%= form.submit 'Update', class: "actions btn rounded btn-primary" %></li>
                          <li><%= link_to 'Back', :back, class: "btn btn-secondary rounded" %></li>
                        <% end %>
                      </ul>
                    </div><!--save-stngs end-->
                  </div><!--acc-setting end-->
                </div>
                
                <div class="tab-pane fade" id="nav-conclusion" role="tabpanel" aria-labelledby="nav-conclusion-tab">
                  <div class="acc-setting">
                    <h3>Conclusion</h3>	
                    <div class="cp-field">
                      <h5>Growth Strategy
                        <details>
                          <summary class="text-info" style="font-size:12px; font-style: italic; margin-bottom: 0px;">Tip!</summary>
                          <p class="text-info mt-1" style="font-size:11px; font-style: italic;">
                           Outline your plan for scaling and growing your business. This could include marketing strategies, 
                           expansion plans, and product development roadmaps.
                          </p>
                        </details>
                      </h5>
                      <div class="cpp-fiel">
                        <%= form.text_area :growth_strategy, placeholder: "Enter growth strategy", class: "form-control" %>
                        <%#= tinymce %>
                      </div>
                    </div>
                    <div class="cp-field">
                      <h5>Investment
                        <details>
                          <summary class="text-info" style="font-size:12px; font-style: italic; margin-bottom: 0px;">Tip!</summary>
                          <p class="text-info mt-1" style="font-size:11px; font-style: italic;">
                            Specify the amount of funding you are seeking and how it will be used to accelerate your business growth. 
                            Be transparent about your funding requirements and valuation expectations.
                          </p>
                        </details>
                      </h5>
                      <div class="cpp-fiel">
                        <%= form.text_area :investment, placeholder: "Enter investment", class: "form-control" %>
                        <%#= tinymce %>
                      </div>
                    </div>
                    <div class="cp-field">
                      <h5>Team
                        <details>
                      <summary class="text-info" style="font-size:12px; font-style: italic; margin-bottom: 0px;">Tip!</summary>
                      <p class="text-info mt-1" style="font-size:11px; font-style: italic;">
                        Introduce the key members of your team, including their backgrounds, expertise, and roles within the company. 
                        Highlight any relevant experience or achievements that demonstrate the team's capability to execute the business plan.
                      </p>
                    </details>
                      </h5>
                      <div class="cpp-fiel">
                        <%= form.text_area :team, placeholder: "Team", class: "form-control" %>
                        <%#= tinymce %>
                      </div>
                    </div>

                    <div class="cp-field">
                      <h5>Conclusion
                        <details>
                      <summary class="text-info" style="font-size:12px; font-style: italic; margin-bottom: 0px;">Tip!</summary>
                      <p class="text-info mt-1" style="font-size:11px; font-style: italic;">
                        Summarize the key points of your pitch and reiterate why your business is a compelling investment opportunity. 
                        End with a call to action, such as requesting a follow-up meeting or investment commitment.
                      </p>
                    </details>
                      </h5>
                      <div class="cpp-fiel">
                        <%= form.text_area :conclusion, placeholder: "Conclusion", class: "form-control" %>
                        <%#= tinymce %>
                      </div>
                    </div>
                    <div class="save-stngs pd2">
                      <ul>
                        <% if pitch_deck.new_record? %>
                          <li><%= form.submit 'Create Pitch', class: "actions btn rounded btn-primary" %></li>
                          <li><%= link_to 'Back', :back, class: "btn btn-secondary rounded" %></li>
                        <% else %>
                          <li><%= form.submit 'Update', class: "actions btn rounded btn-primary" %></li>
                          <li><%= link_to 'Back', :back, class: "btn btn-secondary rounded" %></li>
                        <% end %>
                      </ul>
                    </div><!--save-stngs end-->
                  </div><!--acc-setting end-->
                </div>
							
              </div>
						</div>
					</div>
				</div><!--account-tabs-setting end-->
			</div>
	</section>
<% end %>

