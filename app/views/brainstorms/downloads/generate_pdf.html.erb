<div class="p-8">
  <h1 class="text-5xl mb-8"><%= @brainstorm.problem %></h1>
  <% @brainstorm.concepts.order('votes DESC').each do |concept| %>
    <div class="text-2xl mb-8">
      <p class="font-bold"><%= concept.text %> - <%= pluralize(concept.votes, "vote") %></p>
    </div>
    <% concept.concept_builds.each do |concept_build| %>
    <ul class="text-2xl mb-8">
      <li> - <%= concept_build.concept_build_text %> - <%= pluralize(concept_build.votes, "vote") %></li>
    </ul>
    <% end %>
  <% end %>
</div>
