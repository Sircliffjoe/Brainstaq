<div class="p-6 mb-5 rounded nested-fields row g-3">

  <%= form.hidden_field :_destroy %>

  <div class="mb-6 mt-3 col-sm-12 form-group">
    <label class="form-label">Product</label>
      <%= form.collection_select(:product, Product.all, :id, :title, 
      {prompt: 'Select product'}, class: "form-control") %>
  </div>
  <div class="mb-6 mt-3 col-sm-12 form-group">
    <label class="form-label">Base Product Price</label>
    <%= form.number_field :base_product_price, class: "form-control", placeholder: "Enter tax rate"  %>
  </div>
  <div class="mb-6 mt-3 col-sm-12 form-group">
    <label class="form-label">Monthly Sales Volume</label>
    <%= form.number_field :monthly_sales_volume, class: "form-control", placeholder: "Enter bank interest rate"  %>
  </div>
  <div class="col-md-6 mt-3">
    <label class="form-label">Sales Volume Growth Rate for Year One</label>
    <%= form.number_field :sales_volume_growth_rate_one, class: "form-control", placeholder: "Enter bank interest rate"  %>
  </div>
  <div class="col-md-6 mt-3">
    <label class="form-label">Unit Price Growth Rate for Year One</label>
    <%= form.number_field :unit_price_growth_rate_one, class: "form-control", placeholder: "Enter bank interest rate"  %>
  </div>
  <div class="col-md-6 mt-3">
    <label class="form-label">Sales Volume Growth Rate for Year Two</label>
    <%= form.number_field :sales_volume_growth_rate_two, class: "form-control", placeholder: "Enter bank interest rate"  %>
  </div>
  <div class="col-md-6 mt-3">
    <label class="form-label">Unit Price Growth Rate for Year Two</label>
    <%= form.number_field :unit_price_growth_rate_two, class: "form-control", placeholder: "Enter bank interest rate"  %>
  </div>
  <div class="col-md-6 mt-3">
    <label class="form-label">Sales Volume Growth Rate for Year Three</label>
    <%= form.number_field :sales_volume_growth_rate_three, class: "form-control", placeholder: "Enter bank interest rate"  %>
  </div>
  <div class="col-md-6 mt-3">
    <label class="form-label">Unit Price Growth Rate for Year Three</label>
    <%= form.number_field :unit_price_growth_rate_three, class: "form-control", placeholder: "Enter bank interest rate"  %>
  </div>
  <div class="col-md-6 mt-3">
    <label class="form-label">Sales Volume Growth Rate for Year Four</label>
    <%= form.number_field :sales_volume_growth_rate_four, class: "form-control", placeholder: "Enter inflation rate"  %>
  </div>
  <div class="col-md-6 mt-3">
    <label class="form-label">Unit Price Growth Rate for Year Four</label>
    <%= form.number_field :unit_price_growth_rate_four, class: "form-control", placeholder: "Enter inflation rate"  %>
  </div>
  <div class="col-md-6 mt-3">
    <label class="form-label">Sales Volume Growth Rate for Year Five</label>
    <%= form.number_field :sales_volume_growth_rate_five, class: "form-control", placeholder: "Enter percentage benefits of Salary"  %>
  </div>
  <div class="col-md-6 mt-3">
    <label class="form-label">Unit Price Growth Rate for Year Five</label>
    <%= form.number_field :unit_price_growth_rate_five, class: "form-control", placeholder: "Enter percentage benefits of Salary"  %>
  </div>

  <div class="mb-6 col-sm-12 form-group">
    <%= form.hidden_field :financial_plan_id, placeholder: "0", class: "input form-control" %>
  </div>

  <%= link_to "Remove", "#", data: { action: "click->nested-form#remove_association" }, class: "text-primary underline text-sm col-sm-12" %>
</div>