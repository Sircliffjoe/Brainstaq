<% content_for :title, "How it Works" %>

<!-- start of page-header -->
<section class="page-header bg-light-gray has-shapes has-bg-brash bg-brash-bottom" style="background-image: url(<%= image_path "banner.svg" %>)">
  <div class="container h-100">
    <div class="row d-flex align-items-center h-100">
      <div class="col-md-12 text-center">
        <h2 class="h1 font-weight-bold">How it Works</h2>
        <nav class="mt-15" aria-label="breadcrumb">
          <ol class="breadcrumb font-weight-bold bg-transparent p-0 justify-content-center">
            <li class="breadcrumb-item"><%= link_to "Home", root_path, class: "text-black-300" %></li>
            <li class="breadcrumb-item text-primary" aria-current="page">How it Works</li>
          </ol>
        </nav>
      </div>
    </div>
  </div>

  <div class="shape-1 bg-secondary shape-xs rounded-circle"></div>
  <div class="shape-2 bg-primary shape-xs-2 rounded-circle"></div>
  <div class="shape-3 bg-primary shape-sm-2 rounded-circle"></div>
  <div class="shape-4 bg-tertiary shape-xs rounded-circle"></div>
  <div class="shape-5 bg-tertiary shape-xs rounded-circle"></div>
  <div class="shape-6 bg-primary shape-sm rounded-circle"></div>
  <div class="shape-7 bg-primary shape-xs-2 rounded-circle"></div>
  <div class="shape-8 bg-secondary shape-xs rounded-circle"></div>
</section>

<!-- start of section -->
<section class="section-padding pb-0">
    <div class="container">
        <div class="row align-items-center justify-content-around">
            <div class="col-lg-7" data-aos="fade-up" data-aos-delay="150">
                <%= image_tag 'how-it-works-1.jpg', class: "img-fluid rounded-lg shadow" %>
            </div>
            <div class="col-lg-4 mt-4 mt-lg-0" data-aos="fade-in">
                <h2 class="section-title">Setup <strong>Enterprise</strong></h2>
                <p>Easily setup your enterprise on Brainstaq, and get instant access to a complete 
                suite of business tools and documents already generated uniquely for your business.</p>
            </div>
        </div>
    </div>
</section>
<!-- end of section -->

<!-- start of image-info -->
<section class="section-padding image-info-section has-shapes bg-light-gray has-bg-brash bg-brash-y" style="background-image: url(images/brushes/section-top.svg), url(images/brushes/section-bottom.svg);">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-4 col-md-5" data-aos="fade-in">
                <h2 class="section-title">Manage <strong>Documents</strong></h2>
                <p>Create and manage your business plan, financial models, and other documents, 
                and make informed decisions in real-time. </p>
            </div>
            <div class="col-lg-8 col-md-7" data-aos="fade-up" data-aos-delay="150">
                <div class="has-shapes">
                    <%= image_tag 'how-it-works-1.jpg', class: "img-fluid rounded-lg py-4 my-2" %>
                    <div class="shape-1 shape-sm bg-secondary rounded-circle"></div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="shape-3 shape-xs-2 bg-secondary rounded-circle"></div>
    <div class="shape-4 shape-sm-2 bg-tertiary rounded-circle"></div>
    <div class="shape-5 shape-sm bg-primary rounded-circle"></div>
    <div class="shape-6 shape-xs bg-secondary rounded-circle"></div>
    <div class="shape-7 shape-xs-2 bg-tertiary rounded-circle"></div>
</section>
<!-- end of image-info -->

<!-- start of image-info -->
<section class="section-padding image-info-section has-shapes bg-light-gray has-bg-brash bg-brash-y" style="background-image: url(images/brushes/section-top.svg), url(images/brushes/section-bottom.svg);">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-4 col-md-5" data-aos="fade-in">
                <h2 class="section-title">Create <strong>Projects</strong></h2>
                <p>Create innovative projects, get validations from the public 
                and raise the funding you need harnessing the power of the crowd.</p>
            </div>
            <div class="col-lg-8 col-md-7" data-aos="fade-up" data-aos-delay="150">
                <div class="has-shapes">
                    <%= image_tag 'how-it-works-1.jpg', class: "img-fluid py-4 my-2" %>
                    <div class="shape-1 shape-sm bg-secondary rounded-circle"></div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="shape-3 shape-xs-2 bg-secondary rounded-circle"></div>
    <div class="shape-4 shape-sm-2 bg-tertiary rounded-circle"></div>
    <div class="shape-5 shape-sm bg-primary rounded-circle"></div>
    <div class="shape-6 shape-xs bg-secondary rounded-circle"></div>
    <div class="shape-7 shape-xs-2 bg-tertiary rounded-circle"></div>
</section>
<!-- end of image-info -->

<!-- start of section -->
<section class="pt-50 pb-50">
    <div class="container">
        <div class="row align-items-center justify-content-around">
            <div class="col-lg-7" data-aos="fade-up">
                <%= image_tag 'how-it-works-1.jpg', class: "img-fluid" %>
            </div>
            <div class="col-lg-4 mt-4 mt-lg-0" data-aos="fade-in">
                <h2 class="section-title">Raise <strong>Funds</strong></h2>
                <p class="mb-30">Share, validate, and market your ideas, projects, insights and inspiration and 
                attract funding by engaging the power of the crowd.</p>
            </div>
        </div>
    </div>
</section>
<!-- end of section -->

