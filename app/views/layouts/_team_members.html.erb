<section class="section-team">
	<div class="container">
		<!-- Start Header Section -->
		<div class="row justify-content-center text-center">
			<div class="col-md-8 col-lg-6">
			</div>
		</div>
		<!-- / End Header Section -->

		<% if user_signed_in? && current_user.id == @enterprise.user_id %>
			<%= link_to fa_icon("edit", title: "Add Team member", class: "text-primary float-right mr-2 mt-2", style: "font-size: 20px;"), 
			new_enterprise_team_member_path(@enterprise) %>
		<% end %>
			
    	<div class="row justify-content-center mt-5 text-center">
      	<% @enterprise.team_members.each do |team_member| %>
					<!-- Start Single Person -->
					<div class="col-sm-4 mb-5">
					<% if user_signed_in? && current_user.id == @enterprise.user_id %>
						<div class="dropdown mr-3 mt-5 float-right" style="font-size: 20px;">
							<a class="dropdown-toggle fas fa-ellipsis-v" href="#" role="button" id="dropdownMenuLink" 
								data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
							</a>
							<div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink" style="font-size: 12px;">
								<%= link_to "Edit", edit_enterprise_team_member_path(@enterprise, team_member), class: "dropdown-item" %>
								<%= link_to "Delete", [@enterprise, team_member], :method => 'delete', data: { confirm: 'Are you sure?' }, class: "dropdown-item" %>
							</div>
						</div>
					<% end %>
						<div class="single-person">
							<div class="person-image">
								<%= image_tag team_member.image.url, skip_pipeline: true %>
							</div>
							<div>
								<h5 class="full-name"><%= team_member.full_name %></h5>
								<span class="speciality"><%= team_member.position %></span>
								<h6 class=""><small><%= sanitize team_member.bio %></small></h6>
							</div>
						</div>
					</div><!-- / End Single Person -->
				<% end %>
      </div>
		</div>
	</section>

  <style>
p,a,h1,h2,h3,h4 {
	margin: 0;
	padding: 0;
}

.section-team .header-section {
	margin-bottom: 50px;
}

.section-team .header-section .title {
    font-weight: 700;
    font-size: 45px;
}

.section-team .single-person {
	margin-top: 20px;
	padding: 50px;
	background-color: #f6f9ff;
	border-radius: 5px;
}

.section-team .single-person:hover {
	background: linear-gradient(to right, #016cec, #00b5f7, #0070C0);
}

.section-team .single-person .person-image {
    position: relative;
    margin-bottom: 10px;
    border-radius: 50%;
    border: 4px dashed transparent;
    transition: padding .3s;
}

.section-team .single-person:hover .person-image {
	padding: 10px;
  border: 3px dashed #fff;
}

.section-team .single-person .person-image img {
	width: 100%;
  border-radius: 50%;
}

.full-name {
	margin-bottom: 1px;
	font-size: 16px;
}

 .speciality {
  text-transform: uppercase;
  font-size: 11px;
  color: #0070C0;
}

.section-team .single-person:hover .full-name,
.section-team .single-person:hover h6,
.section-team .single-person:hover .speciality {
	color: #fff;
}
  </style>